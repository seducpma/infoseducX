      <font  size="2">
      <table border="2" width="100%">
         <tr>
          <td align="left" colspan="11"><b>TOTAL DE CURRICULOS: </b>
              <font color ="red "size="2"><b><%= @contador %></b></font>
          </td>
        </tr>
       <%cont=1%>

        <tr>
          <th></th>
          <th>Nome</th>
          <th>Modalidade</th>
          <th>Curso</th>
          <th>Semestre</th>
          <th>Período</th>
          <th>Instituição</th>
          <th>Status</th>
          <th>Cadastrado</th>
          <% if current_user.has_role?('administrador')%>
            <th colspan="3"></th>
          <%end%>

        </tr>
        <% for curriculos in @curriculos %>
        <tr>
          <td align="center"><%= cont %></td>
          <td align="center"><%=h curriculos.nome %></td>
          <td align="center"><%=h curriculos.modalidade %></td>
          <td align="center"><%=h curriculos.curso %></td>
          <td align="center"><%=h curriculos.semestre %></td>
          <td align="center"><%=h curriculos.periodo %></td>
          <td align="center"><%=h curriculos.instituicao %></td>
          <td align="center"><%=h curriculos.status %></td>
          <td align="center"><%=h curriculos.created_at.strftime("%d/%m/%Y")%></td>
          <div class="botao">
           <% if current_user.has_role?('administrador')%>
            <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "25x25"),{:action => "curriculo", :id =>curriculos}, :title => "Exibir" %></td>
            <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_curriculo_path(curriculos), :title => "Alterar"%></td>
            <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "25x25"), curriculos, :confirm => 'Confirma Exclusao?', :method => :delete, :title => "Excluir" %></td>


           <%end%>
         </div>
                 <%cont= cont+1%>
        </tr>
     <% end %>
     </table>


