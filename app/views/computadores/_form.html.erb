<% form_for(@computadores) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table class="tabelas" width="100%" align="center">
  <tr>
      <th align="left">
         <font  size=5 color="black"> <b> COMPUTADORES</b></font>
      </th>
       <td width="5%">
         <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
       </td>
  </tr>
   <td colspan="2">
   <fieldset><legend><font  size=4> Computador</font></legend>
    <table>
     <tr>
        <td width="50%">
          <table>
           <tr>
              <td align="left"><b>Unidades:</b></td>
              <td align="left" colspan="3" align="left"><%= f.collection_select :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>
           </tr>
           <tr>
             <td align="left"><b> Local:</b> </td>
             <td width="20%"align="left" align="left"> <%= f.collection_select :tipo_controle_id, @tipo_controles, :id, :nome, :include_blank => ' -- Selecione -- ' %></td>
             <td width="35%" align="right"><b>Tipo:</b> </td>
             <td align="left"><%= f.select :tipo , options_for_select(@tipo)%> </td>
           </tr>
           <tr>
             <td align="left"valign="top"><b>Configuração:</b></td>
             <td  colspan="3" align="left" ><%= f.text_area(:config, :cols =>"60", :rows => "2",  :value => 'Processador / Memória / HD') %></td>
           </tr>
          </table>
         </td>
         <td valign="top">
          <table>
           <tr>
             <td align="left"><b>Nº Patrimônio:</b></td>
             <td align="left"><%= f.text_field :pat, :size =>18 %></td>
           </tr>
           <tr>
             <td align="left"><b>Nº Série:</b></td>
             <td align="left"><%= f.text_field :serie, :size =>18 %></td>
           </tr>
           <tr>
             <td align="left"><b>Usuário:</b></td>
             <td align="left"><%= f.text_field :user, :size =>18 %></td>
           </tr>
           <tr>
             <td align="left"><b>Fabricante:</b></td>
             <td align="left"><%= f.select :fabricante , options_for_select(@fabricante)%></td>
           </tr>

         </table>
        </td>
      </tr>
    </table>
   </fieldset>
      <table>
          <tr>
            <div id='Certeza'>
              <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
            </div>
            <td align="left"><input type="image" src="/stylesheets/images/salvar.png" title="Gravar"></td>
           </tr>
        </table>

     <% end %>
     </td>
    </tr>
  </table>
</font>
