<% t=0 %>
<font size="2">
<table  class="tabelas4" align="center" width="80%">
 <tr>
   <th align="left">
     <font  size=5 color="black"> <b> ESTAGIÁRIO / UNIDADE</b></font>
   </th>
   <td width="5%">
      <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
<tr>
  <td colspan="2">
    <br/><br/>
    <div class="botao">
      <table width="100%" >
        <tr>
          <% form_for @search do |f| %>
            <tr>
               <td align="left" width="20%"><font  size="3" color="black">Unidade:</font>

                   <%= f.collection_select :unidade_id_equals, @unidades1, :id, :nome, :include_blank => ' -- Selecione -- ', :size=> 30 %>

               <%= submit_tag "Consultar", :class => "btn_filtrar" %></td>
           </tr>
          <% end %>
          </tr>
        </table>
    </div>
    <table border ="1" width="100%"  class="tabelas">

        <%if @estagiario_unidade == "Selecione o tipo de unidade"%>
          <center><b><%= @estagiario_unidade %></b></center>
          <br/>
        <%else%>
            <tr style="font-size:12px">
             <br/>
                <th>Nome_Estagiário</th>
                <th>Tipo</th>
                <th>Horário</th>
                <th>Carga_Horária</th>
                <th colspan="2">Unidade</th>
            </tr>
            <h3 align="center">Unidade:  <%= params[:search][:periodo_uni_equals] %></h3>
          <% for periodo in @estagiario_unidade %>
            <tr>
              <td><%=h periodo.nome %></td>
              <td><center><%=h periodo.tipo%></center></td>
              <td><center><%=h periodo.horario%></center></td>
              <td><center><%=h periodo.carga_horaria %></center></td>
              <% if periodo.unidade_id.present? %>
                <td><%=h periodo.unidade.nome %></td>
              <%else%>
                <td></td>
              <%end%>
               <td width="6%"align="left"><%= button_to('Visualizar', {:action => "show", :id => periodo},:method => "get", :title => "Visualizar") %></td>
            </tr>
            <tr>
            </tr>
        <% end %>

    <%end%>
    </table>

    <br/>

    <table>
      <tr>
          <% if @estagiario_unidade != "Selecione o tipo de unidade" %>
            <div class="botao">
               <td width="6%"align="left" ><%= button_to('Voltar', homes_path, :method => "get", :title => "Voltar")%></td>
               <td align="left" ><%= button_to "Imprimir", onclick="javascript:window.print()", :title => "Imprimir" %></td>            </div>
          <%end%>
      </tr>
    </table>
</table>
