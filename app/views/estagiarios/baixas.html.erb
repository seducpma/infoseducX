 <table class="tabelas1" align="center" width="100%">
   <tr>
      <th align="left">
         <font  size=5 color="black"> <b> EX-ESTAGIÁRIOS</b></font>
      </th>
       <td width="5%">
         <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
       </td>
     </tr>
   <tr>
     <td colspan="2">
       <br/>
       <div class="botao">
       <table width="100%">
        <tr>
          <td align="right">
           <div class="botao">
           <table>
            <tr>
            <% form_tag baixas_path, :method => 'get' do %>
            <td align="right"><font size="4"> Estagiário:</font>
               <%= text_field_tag :search , params[:search] %>
               <%= submit_tag "Consultar", :class => "btn_filtrar" %>
            </td>
            <% end %>
            </tr>
           </table>
         </div>
         </td>
       </tr>
      </table>
      <br/>
      </div>
      <font  size="2">
      <table border="2" width="100%">
      <% for estagiarios in @baixas %>
       <tr>
         <td rowspan="6" valign="top"><%= image_tag estagiarios.photo.url(:thumb) %></td>
         <th height="10%">Nome</th>
         <th>Fone</th>
         <th>Cel</th>
         <th colspan="4">Email</th>
       <tr>
          <td align="left"><%=h estagiarios.nome %></td>
          <td align="center"><%=h estagiarios.fone %></td>
          <td align="center"><%=h estagiarios.cel %></td>
          <td colspan="4"><%=h estagiarios.email %></td>       </tr>
       </tr>
       <tr>
         <th>Unidade</th>
         <th>Período</th>
          <th>Horário</th>
          <th width = 10% >C.Horária</th>
          <th width="10%">Admissão</th>
           <th width="10%">Demissão</th>
          <th >Motivo</th>
      </tr>
      <tr>
        <% if estagiarios.unidade_id.nil? then %>
            <% if estagiarios.regiao.nil? %>
            <%else%>
              <td><%=h estagiarios.regiao.regiao  %></td>
            <%end%>
          <%else%>
              <td><%=h estagiarios.unidade.nome  %></td>
            <%end%>
         <td><%=h estagiarios.periodo_trab %></td>
         <td><%=h estagiarios.horario %></td>
         <td><%=h estagiarios.carga_horaria%></td>
         <td><%=h estagiarios.data_admissao.strftime("%d/%m/%Y")  %></td>
           <% if estagiarios.desligado == 1 %>
              <td><%=h estagiarios.data_desliga.strftime("%d/%m/%Y")  %></td>
            <%end%>
         <td><%=h estagiarios.etinerante%></td>
      </tr>
        <tr>
            <th colspan="3">Observação</th>
            <th colspan="4">Avaliação</th>
        </tr>
        <tr>
            <td colspan="3"><%=h estagiarios.obs %></td>
            <td colspan="4S"><%=h estagiarios.aval %></td>
        </tr>
      <tr>
        <td colspan="12">
          <div class="botao">
            <table>
               <td align="center" colspan="1"><td width="6%"align="left"><%= button_to('Visualizar', {:action => "show", :id => estagiarios},:method => "get", :title => "Visualizar") %></td></td>
                <% if current_user.has_role?('administrador') or current_user.has_role?('estagiario SEDUC') %>
                  <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_estagiario_path(estagiarios), :title => "Alterar Dados"%></td>
                     <% if current_user.has_role?('administrador')%>
                       <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "25x25"), estagiarios, :confirm => 'Confirma Exclusao?', :method => :delete, :title => "Excluir" %></td>
                     <%end%>
               <%end%>
            </table>
          </div>
         </td>
      </tr>


      <% end %>
     </table>
   </font>
   <div class="botao">
   <table width="100%"align="center">
     <tr>
        <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
         <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>
     </tr>
   </table>
  </div>
 </table>
