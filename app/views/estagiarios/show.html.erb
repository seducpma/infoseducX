<div id="interno6">
<% title "SAUDES".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>CADASTRO DE ESTAGIÁRIO</strong></font><br/>
 </div>
<div class ="tabs">
 <table bgcolor="#DCDCDC" width="100%">
   <tr bgcolor="#DCDCDC"  width="100%">
     <td>
       <fieldset><legend><font  size=3><b> </b></font></legend>
            <table  bgcolor="#F5F5F5" width="100%"  align="center">
              <tr>
               <td colspan="2">
                    <font  size="2">
                    <table width="100%">
                      <tr>
                        <td width="50%"  valign="top">
                         <fieldset><legend><font  size=4> Dados Pessais</font></legend>
                         <table>
                            <tr>
                              <td>
                                <%= image_tag @estagiario.photo.url(:thumb) %>
                              </td>
                              <td valign="top">
                                <table>
                                  <tr>
                                    <td align="left"><b>Nome:</b></td>
                                    <td align="left"><%=h @estagiario.nome %></td>
                                  </tr>
                                  <tr>
                                    <td align="left"><b>Fone:</b></td>
                                    <td align="left"><%=h @estagiario.fone %></td>
                                  </tr>
                                  <tr>
                                    <td align="left"><b>Celular:</b></td>
                                    <td align="left"><%=h @estagiario.cel %></td>
                                  </tr>
                               </table>
                              </td>
                           </tr>
                           <tr>
                             <td align="left"><b> Endereço:</b></td>
                             <td align="left"> <%=h @estagiario.endereco %></td>
                           </tr>
                          <tr>
                             <td align="left"><b>Nº: </b></td>
                             <td align="left"><%=h @estagiario.num %></td>
                          </tr>
                          <tr>
                             <td align="left"><b> Complemento:</b></td>
                             <td align="left"><%=h @estagiario.complemento %></td>
                           </tr>
                           <tr>
                             <td align="left"><b> Bairro:</b></td>
                             <td align="left"><%=h @estagiario.bairro %></td>
                           </tr>
                           <tr>
                             <td align="left"><b> Cidade:</b></td>
                             <td align="left"><%=h @estagiario.cidade %></td>
                           </tr>
                           <tr>
                             <td align="left"><b> e_mail:</b></td>
                             <td align="left"><%=h @estagiario.email %></td>
                           </tr>
                           <tr>
                             <td align="left"><b>RG:</b></td>
                             <td align="left"><%=h @estagiario.RG %>
                           </tr>
                           <tr>
                             <td align="left"><b>CPF</b></td>
                             <td align="left"><%=h @estagiario.CPF %>
                           </tr>

                           <tr>
                             <td align="left"><b>Data Nasc:</b></td>
                             <td align="left">  <%=h @estagiario.data_nasc.strftime("%d/%B/%Y") %></td><p>
                           </tr>
                            <tr>
                            <td valign="top" align="left"><b>Status:</b></td>
                            <td align="left">  <% if  @estagiario.desligado == 1 %>
                                                     <b> DESLIGADO</b>
                                              <%else%>
                                                     <b>EM ATIVIDADE</b>
                                              <%end%>
                            </td>
                           </tr>
                            <tr>
                            <td valign="top" align="left"><b>Observações:</b></td>
                            <td align="left">  <%=h @estagiario.obs %></td>
                           </tr>
                         </table>
                        </fieldset>
                       </td>
                       <td width="50%" valign="top">
                        <table width="100%">
                          <tr valign="top">
                            <td>
                              <fieldset><legend><font  size=4> Dados Faculdade</font></legend>
                              <table>
                                <tr>
                                  <td align="left"><b>Faculdade:</b></td>
                                  <td align="left"><%=h @estagiario.faculdade %></td>
                                </tr>
                                <tr>
                                  <td align="left"><b> Matricula:</b></td>
                                  <td align="left"> <%=h @estagiario.matricula %>
                                </tr>
                                <tr>
                                  <td align="left"><b> Período:</b></td>
                                  <td align="left"><%=h @estagiario.periodo_est %></td>
                                </tr>
                                <tr>
                                  <td align="left"><b>Ingresso:</b></td>
                                  <td align="left"><%=h @estagiario.data_ingresso.strftime("%B de %Y") %></td>
                               </tr>
                               <tr>
                                 <td align="left"><b>Término:</b></td>
                                    <% if @estagiario.data_termino.nil? then %>
                                        <td align="left"><%=h @estagiario.data_termino %></td>
                                    <%else%>
                                        <td align="left"><%=h @estagiario.data_termino.strftime("%B de %Y") %></td>
                                    <%end%>
                               </tr>
                            </table>
                            </fieldset>
                            </td
                           </tr>
                           <tr>
                            <td>
                             <fieldset><legend><font  size=4> Dados Contrato</font></legend>
                             <table>
                                <tr>
                                 <td align="left"><b>Matricula(PMA):</b></td>
                                <td align="left"> <%=h @estagiario.matriculaPMA%></td>
                               </tr>
                               <tr>
                                  <td align="left"><b>Tipo Estágio:</b></td>
                                  <td align="left"><%=h @estagiario.tipo %> </td>
                                </tr>
                               <tr>
                                   <td align="left" width="10%"><b>Unidade:</b></td>
                                    <%if @estagiario.unidade_id.nil?%>
                                      <td align="left"></td>
                                    <%else%>
                                      <td align="left"><%=h @estagiario.unidade.nome %></td>
                                    <%end%>
                               </tr>
                               <tr>
                                  <td align="left"><b>Horário:</b></td>
                                  <td align="left"><%=h @estagiario.horario %> </td>
                                </tr>
                               <tr>
                                  <td align="left"><b>Período:</b></td>
                                  <td align="left"><%=h @estagiario.periodo_trab %>  &nbsp&nbsp <b>Período:</b> <%=h @estagiario.carga_horaria %> </td>
                                </tr>
                                <tr>
                                 <td align="left"><b>Admissão:</b></td>
                                <td align="left"> <%=h @estagiario.data_admissao.strftime("%d/%B/%Y") %></td>
                               </tr>
                                <tr>
                                 <td align="left"><b>Matricula (PMA):</b></td>
                                <td align="left"> <%=h @estagiario.matriculaPMA%></td>
                               </tr>

                                  <% if @estagiario.desligado == 1 %>
                                    <tr>
                                        <td align="left"><b>Encerrado em:</b></td>
                                        <td align="left"><%=h @estagiario.data_desliga.strftime("%d/%m/%y") %></td>
                                    </tr>
                                    <tr>
                                        <td align="left"><b>Motivo: </b></td>
                                         <td align="left"><%=h @estagiario.etinerante%></td>
                                    </tr>
                                   <%end%>
                              <tr>
                                  <td align="left"><b>Responsável:</b></td>
                                  <td align="left"><%=h @estagiario.responsavel %> </td>
                              </tr>
                               <% if current_user.has_role?('admin')or current_user.has_role?('SEDUC') %>
                                   <tr>
                                    <td align="left"><b> Avaliação</b></td>
                                    <td align="left"><%=h @estagiario.aval %></td>
                                  </tr>
                               <%end%>

                            </table>
                           </fieldset>

                           </td>
                          </tr>
                         </table>
                        </td>
                       </tr>

                       <table>
                         <tr>
                           <td width="6%"align="left" ><%= button_to('Fechar', home_path, :method => "get", :title => "Fechar")%></td>
                            <% if current_user.has_role?('admin') or current_user.has_role?('estagiario SEDUC') or  current_user.has_role?('SEDUC') %>
                                <td align="center" colspan="1"><%= button_to('Editar', {:action => "edit", :id => @estagiario.id},:method => "get", :title => "Visualizar") %></td>
                              <%end%>
                           

                        </tr>
                      </table>

                       </table>
                     </font>
                </td>
               </tr>
             </table>
       </fieldset>
    </td>
  </tr>
 </table>



</div>
<br/>
</div>
<br/>

