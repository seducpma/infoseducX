<div class="relatorio">
 <table  class="tabelas1" align="center" width="100%">
   <tr>
      <th align="left">
          <font  size=5 color="black"> <b> TODOS ESTAGIÁRIOS</font> <font size="3"> (Atuais e Desligados)</b></font>
      </th>
       <td width="5%">
         <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
       </td>
     </tr>
   <tr>
    <tr>
      <td colspan="2">
       <div class="botao">
        <table width="100%">
          <tr>
             <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
             <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>
         </tr>
         </table>
         </div>
         <% cont=1 %>
        <table border="2">
          <tr>
             <th><font size="2"></font></th>
             <th><font size="2">Nome</font></th>
             <th><font size="2">Fone</font></th>
             <th><font size="2">Cel</font></th>
             <th><font size="2">Email</font></th>
             <th><font size="2">Maticulado</font></th>
             <th><font size="2">Unidade</font></th>
             <th><font size="2">Período</font></th>
             <th><font size="2">Status</font></th>
          </tr>
          <% for estagiarios in @estagiarios %>
            <tr>
               <td><%= cont %></td>
               <td><%=h estagiarios.nome %></td>
               <td><%=h estagiarios.fone %></td>
               <td><%=h estagiarios.cel %></td>
               <td><%=h estagiarios.email %></td>
               <td><%=h estagiarios.periodo_est %></td>
               <%if estagiarios.unidade_id.nil?%>
                     <td><%=h estagiarios.regiao.regiao %></td>
               <%else%>
                     <td><%=h estagiarios.unidade.nome %></td>
               <%end%>
                <td><%=h estagiarios.periodo_trab %></td>
               <%if estagiarios.desligado == 1 %>
                 <td id="disabled"><font color="red"><%=h "Desligado" %></font></td>
               <%else%>
                 <td id="enabled"><font color="green"><%=h "Trabalhando" %></font></td>
               <%end%>
            </tr>
            <%cont = cont+1 %>
          <% end %>
          </table>
           <div class="botao">
           <table width="100%"align="center">
             <tr>
                <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
                 <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>
             </tr>
           </table>
          </div>

   </table>
  <br/>
</div>