<script Language="JavaScript">
function Imprimir(){
window.print();
}
</script>
<br/><br/>
<% t=0 %>
<font size="2">
<table  class="tabelas4" align="center" width="80%">
 <tr>
   <th align="left">
     <font  size=5 color="black"> <b> ESTAGIÁRIO POR PERÍODO</b></font>
   </th>
   <td width="5%">
      <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
<tr>
  <td colspan="2">
    <br/><br/>
    <div class="botao">
      <table width="100%" >
        <tr>
          <% form_for @search do |f| %>
            <tr>
               <td align="left" width="20%"><font  size="3" color="black">Período:<%= f.select :periodo_trab_equals, options_for_select(PERIODO), :include_blank => true%></font>
               <%= submit_tag "Consultar", :class => "btn_filtrar" %></td>
           </tr>
          <% end %>
          </tr>
        </table>
    </div>
    <table border ="1" width="100%"  class="tabelas">

        <%if @estagiario_periodo == "Selecione o periodo"%>
          <center><b><%= @estagiario_periodo %></b></center>
          <br/>
        <%else%>
            <h3 align="center">Estagiários do período:  <%= params[:search][:periodo_trab_equals] %></h3>
        <tr style="font-size:12px">
         <br/>
                <th>Nome_Estagiario</th>
                <th>Horário</th>
                <th>Carga_Horária</th>
                <th colspan="2">Unidade</th>
        </tr>
          <% for periodo in @estagiario_periodo %>
            <tr>
              <td><%=h periodo.nome %></td>
              <td><center><%=h periodo.horario%></center></td>
              <td><center><%=h periodo.carga_horaria %></center></td>
              <% if periodo.unidade_id.present? %>
                <td><%=h periodo.unidade.nome %></td>
              <%else%>
                <td></td>
              <%end%>
               <td width="6%"align="left"><%= button_to('Visualizar', {:action => "show", :id => periodo},:method => "get", :title => "Visualizar") %></td>            </tr>
            <tr>
            </tr>
        <% end %>
        <%if params[:search][:periodo_trab_equals] != "TODOS"%>
          <%= will_paginate @estagiario_periodo %>
        <%end%>
    <%end%>
    </table>

    <br/>

    <table>
      <tr>
          <% if @estagiario_periodo != "Selecione o periodo" %>
            <div class="botao">
               <td width="6%"align="left" ><%= button_to('Voltar', homes_path, :method => "get", :title => "Voltar")%></td>
               <td align="left" ><%= button_to "Imprimir", onclick="javascript:window.print()", :title => "Imprimir" %></td>            </div>
          <%end%>
      </tr>
    </table>
</table>
</font>
<br/>
