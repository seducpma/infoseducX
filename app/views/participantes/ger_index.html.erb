<div id="conteudo2">
<fieldset>
  <legend><font size=6>Participantes Cadastrados</font></legend>

 <table border="2">
  <tr>
    <th>Nome</th>
    <th>Endereço</th>
    <th>Cidade</th>
    <th>Bairro</th>
    <th>Estado</th>
    <th>Fone Residencial</th>
    <th>Fone Comecial</th>
    <th>Fone Celular</th>
    <th>e-mail</th>
    <th>Trabalho</th>
    <th>Matricula</th>
    <th>Observações</th>
  </tr>
  <% for participante in @participantes %>
  <tr>
    <td><%=h participante.nome %></td>
    <td><%=h participante.endereco %></td>
    <td><%=h participante.cidade %></td>
    <td><%=h participante.bairro %></td>
    <td><%=h participante.estado %></td>
    <td><%=h participante.foneres %></td>
    <td><%=h participante.fonecom %></td>
    <td><%=h participante.cel %></td>
    <td><%=h participante.email %></td>
    <td><%=h participante.trabalho %></td>
    <td><%=h participante.matricula %></td>
    <td><%=h participante.obs %></td>
 </tr>
  <tr>
   <td bgcolor="gray"colspan="12">
     <table>
      <td bgcolor="gray"><%= button_to('Exibir',{:action => "show", :id =>participante}, :method => "get") %></td>
      <td bgcolor="gray"> <%= button_to('Editar',{:action => "edit", :id =>participante}, :method => "get") %></td>
      <td bgcolor="gray"><%= button_to('Excluir',{:action => "destroy", :id =>participante}, :confirm => 'Confirma exclusão?', :method => "delete")%></td>
     </table>
    </td>
  </tr>
  <% end %>
 </table>
</fieldset>

</div>