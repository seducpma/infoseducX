<font  size="2">
 <table width="100%" align="center"  bgcolor="#F5F5F5" >
   <tr   bgcolor ="#E6E2D">
        <th align="center">
           <font  size=5 color="black">  <b> CADASTRO DE PARTICIPANTES </b></font>
        </th>
      </tr>
  <tr>
    <td colspan="2">
     <% form_for(@participante) do |f| %>
     <%= f.error_messages %>
     <font  size="2">
      <fieldset><legend><font  size=4> Participante</font></legend>
          <table width="100%" align="center" >
         <tr>
            <td colspan="2"><a href="#" class="filtro_professor"><%= radio_button_tag(:type_of, "1") %></a>Professor na SEDUC/PMA &nbsp&nbsp&nbsp&nbsp&nbsp
                <a href="#" class="filtro"><%= radio_button_tag(:type_of, "2") %></a>Funcionario da SEDUC/PMA &nbsp&nbsp&nbsp&nbsp&nbsp
                <a href="#" class="filtro_unidade"><%= radio_button_tag(:type_of, "3") %></a>Outros
           </td>
         </tr>
         <% if $parti != 1 %>
         <tr>
             <td colspan="2"><div class="consulta_nome" style="display:none"> <%= render "funcionario" %> </div>
               <div class="consulta_unidade" style="display:none"> <%= render "outros" %> </div>
               <div class="consulta_professor" style="display:none"> <%= render "professor" %> </div>
           </td>
         </tr>


       <% end %>
            <tr>
                <td width ="11%" align="left" valign="top"><b><font size="3" color =" red">*</font>E-mail:</b></td>
               <td align="left"><%= f.text_field :email, :size =>60 %><font size="2" color =" red"><b>   <=====  &nbsp&nbsp *Preenchimento obrigatório</b></font></td>
            </tr>
             <tr>
               <td align="left"><b>Observação:</b></td>
               <td align="left"><%= f.text_field :obs, :size =>60 %></td>
            </tr>
            <tr>
              <% if $parti == 1 %>
                <br/>
                <td align="left" colspan="2"><font size="5" color =" red"><b>*
                 NÃO CONSTA E_MAIL - FAVOR CADASTAR </b></font>
                </td>
              <%else%>
                <td  align="left" colspan="2"><font size="3" color =" red"><b></b></font>
                 </td>
              <%end%>
            </tr>
        </table>
      </fieldset>

        <table width="100%" align="left">
         <tr>
           <td colspan="2">

                <table width="40%" align="left">
                   <tr>
                     <td width="2%"  align="left"><%= f.submit "Gravar" %> </td>
        <% end %>
                      <td  align="left"><%= button_to('Fechar', home_path, :method => "get", :title => "Fechar")%></td>

                   </tr>
                </table>


           </td>
          </tr>
       </table>

    </td>
   </tr>
  </table>
</font>


