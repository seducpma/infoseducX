<table  class="tabelas" width="50%" align="center">
   <tr>
    <th align="left">
       <font  size=5 color="black"> <b> CADASTRO DE PARTICIPANTES</b></font>
    </th>
    <td width="5%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
   </tr>
  <tr>
    <td colspan="2">
     <% form_for(@participante) do |f| %>
     <%= f.error_messages %>
     <font  size="2">
      <fieldset><legend><font  size=4> Participante</font></legend>
        <table width="100%" align="center">
            <tr>
              <% if $parti == 1 %>
                <br>
                <td align="left" colspan="2"><font size="5" color =" red"><b>*
                 NÃO CONSTA E_MAIL - FAVOR CADASTAR </b></font>
                </td>
              <%else%>
                <td align="left" colspan="2"><font size="3" color =" red"><b>*
                  Campos com preenchimento obrigatório</b></font>
                 </td>
              <%end%>
            </tr>
          <tr>
               <td align="left"><font size="3" color =" red"><b>*</b></font><b>Nome: </b></td>
               <td align="left"><%= f.text_field :nome, :size =>68%></td>
            </tr>
         <% if $parti != 1 %>
            <tr>
               <td align="left"><b>Profissão:</b></td>
               <td align="left" colspan="3"><%= f.text_field :profissao, :size =>24%>
                 - <b>CPF:</b> <%= f.text_field :cpf, :size =>9%>
                 - <b>RG:</b> <%= f.text_field :rg, :size =>9%> </td>
            </tr>
            <tr>
               <td align="left"><b>Endereço:</b></td>
               <td align="left" colspan="3"><%= f.text_field :endereco, :size => 55 %>
                   <b>Nº</b><%= f.text_field :num, :size => 4%>
              </td>
            </tr>
            <tr>
               <td align="left"><b>Complemento:</b></td>
               <td align="left"colspan="3"><%= f.text_field :complemento, :size =>24 %>
                - <b>Fone:</b><%= f.text_field :telefone, :size =>9 %> -
                   <b>Cel:</b><%= f.text_field :cel, :size => 9 %>

               </td>
            </tr>
            <tr>
               <td align="left"><b>Cidade/Estado:</b></td>
               <td align="left"colspan="3"><%= f.text_field :cidade, :size =>19%>
                     <b>Bairro:</b><%= f.text_field :bairro, :size =>20 %> -
                   <b>CEP:</b><%= f.text_field :CEP, :size =>3 %>
               </td>
            </tr>
       <% end %>
            <tr>
               <td align="left"><b><font size="3" color =" red">*</font>E-mail:</b></td>
               <td align="left" colspan="3"><%= f.text_field :email, :size =>68 %></td>
            </tr>
            <tr>
               <td align="left"><font size="3" color =" red"><b>*</b></font><b>NºMatricula:</b></td>
               <td align="left"> <%= f.text_field :matricula, :size => 4 %>
                                 <font size="3" color =" red"><b>*</b></font><b>Unidade:</b>
                                 <%= collection_select  :participante, :unidade_id, @unidades, :id, :nome, :include_blank => ' --- Selecione opção ---'  %>
               </td>
            </tr>
             <tr>
               <td align="left"><b>Função:</b></td>
               <td colspan="3" align="left"><%= f.text_field :funcao, :size =>68 %></td>
            </tr>
             <tr>
               <td align="left"><b>Observação:</b></td>
               <td colspan="3" align="left"><%= f.text_field :obs, :size =>70 %></td>
            </tr>
        </table>
      </fieldset>
      <div class="botao">
        <table width="100%" align="left">
         <tr>
           <td colspan="2">
              <div class="botao">
                <table width="40%" align="right">
                   <tr>
                     <td align="right"><%= f.submit "Gravar" %> </td>
        <% end %>
                      <td width="2%" align="right"><%= button_to('Voltar', homes_path, :method => "get", :title => "Voltar")%></td>

                   </tr>
                </table>
              </div>

           </td>
          </tr>
       </table>
      </div>
    </td>
   </tr>
  </table>
</font>


