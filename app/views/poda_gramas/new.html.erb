<div id="interno5">
<% title "AULASEVENTUAL".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>PODA DE GRAMA</strong></font><br/>
 </div>

  <div class="tabs">
     <% form_for(@poda_grama) do |f| %>
      <%= f.error_messages %>
             <br/>
             <table  width="100%"  align="center"  bgcolor="#F5F5F5"  >
                <tr   bgcolor ="#E6E2D">
                  <td colspan="8"><b><font size="3"> &nbsp SOLICITAÇÂO DE PODA DE GRAMA &nbsp  </b></td>
                </tr>
                <tr>
                  <td colspan="8"><hr></td>
                </tr>
                <tr>
                   <td align="left"><b>Unidade: </b></td>
                   <td  align="left"><%= collection_select :poda_grama, :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecionar -- ' %></td>
                </tr>
                <tr>
                   <td align="left" valign="top"><b>Solicitanteo:</b></td>
                   <td align="left" colspan="5"><%= f.text_field :solicitante, :size =>52 %></td>

               </tr>

                <tr>
                   <td align="left" valign="top"><b>Observação:</b></td>
                   <td align="left" colspan="5"><%= f.text_area(:obs,:cols => "51", :rows => "3") %></td>

               </tr>
           </table>

             <table width="100%"  align="center">
                    <tr>
                       <td width="5px"align="left"><%= f.submit 'Salvar' %></td>
      <% end %>
                       <td align="left"><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>


                   </tr>
                </table>
     </div>
   </div>
</div>
