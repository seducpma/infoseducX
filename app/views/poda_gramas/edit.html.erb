<div id="interno5">
<% title "AULASEVENTUAL".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>AGENDA PODA DE GRAMA</strong></font><br/>
 </div>

  <div class="tabs">
     <% form_for(@poda_grama) do |f| %>
      <%= f.error_messages %>
             <br/>
             <table  width="100%"  align="center"  bgcolor="#F5F5F5"  >
                <tr   bgcolor ="#E6E2D">
                  <td colspan="8"><b><font size="3"> &nbsp AGENDAMENTO DE PODA DE GRAMA &nbsp  </b></td>
                </tr>
                <tr>
                  <td colspan="8"><hr></td>
                </tr>
                <tr>
                   <td align="left" width="20%"><b>Unidade: </b></td>
                   <td align="left" ><%=h@poda_grama.unidade.nome%></td>
                </tr>
                <tr>
                   <td align="left" valign="top"><b>Solicitante:</b></td>
                   <td align="left"><%=h @poda_grama.solicitante %> </td>

               </tr>
                <tr>
                   <td align="left" valign="top"><b>Solicitação:</b></td>
                   <td align="left"> <%=h @poda_grama.created_at.strftime("%d/%B/%Y") %> </td>

               </tr>

               <%if @poda_grama.agendamento.nil?%>
                 <tr>
                   <td  align="left">  <b>Agendado para: </b>&nbsp</td>
                     <td > &nbsp<%= datepicker_tag(:poda_grama, :agendamento,{ :size => 10},{:dateFormat => "'dd-mm-yy'", :changeYear => true, :changeMonth => true, :yearRange => "'-90:+0'", :buttonImage => "'/stylesheets/images/datepicker.gif'",:showOn =>  "'both'" }) %></td>
                 </tr>
               <%else if @poda_grama.execucao.nil?%>
                         <tr>
                           <td  align="left">  <b>Agendado para: </b>&nbsp</td>
                             <td > &nbsp<%= datepicker_tag(:poda_grama, :agendamento,{ :size => 10},{:dateFormat => "'dd-mm-yy'", :changeYear => true, :changeMonth => true, :yearRange => "'-90:+0'", :buttonImage => "'/stylesheets/images/datepicker.gif'",:showOn =>  "'both'" }) %></td>
                         </tr
                         <% if !@poda_grama.agendamento.nil?%>
                             <tr>
                                 <td  align="left">  <b>Executado em: </b>&nbsp</td>
                                 <td> &nbsp<%= datepicker_tag(:poda_grama, :execucao,{ :size => 10},{:dateFormat => "'dd-mm-yy'", :changeYear => true, :changeMonth => true, :yearRange => "'-90:+0'", :buttonImage => "'/stylesheets/images/datepicker.gif'",:showOn =>  "'both'" }) %></td>
                             </tr>
                             <tr>
                                 <td  align="left">  <b>Executado por: </b>&nbsp</td>
                                 <td align="left"><%= f.text_field :executado, :size =>45 %></td>
                             </tr>
                        <%end%>
                    <%end%>
               <%end%>
                <tr>
                   <td align="left" valign="top"><b>Observação:</b></td>
                   <td align="left" ><%= f.text_area(:obs,:cols => "45", :rows => "3") %></td>

               </tr>
           </table>

             <table width="100%"  align="center">
                    <tr>
                       <td width="5px"align="left"><%= f.submit 'Salvar' %></td>
      <% end %>
                       <td align="left"><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>


                   </tr>
                </table>
     </div>
   </div>
</div>
<br/>
