<table class="tabelas3" align="center" width="40%">
  <tr>
    <th align="left">
       <font  size=4><b> PONTO ELETRÔNICO - Saida</b></font>
    </th>
       <th width="5%">
         <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
       </th>
  </tr>
  <tr>
    <td colspan="2">
        <% form_for(@ponto) do |f| %>
        <%= f.error_messages %>
