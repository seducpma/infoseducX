                            <td  align="left" ><%= button_to 'Imprimir', onclick="javascript:MM_openBrWindow('#{impressao_nf_path}','impressao', 'scrollbars=yes , toolbar=yes, status=yes');", :title => "Imprimir" %> </b></td>
                        </tr>
                    </table>


        </tr>
    </table>

  </div>
