<% form_for(@senhas) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table class="tabelas2" align="center" width="50%">
  <tr>
   <th align="left">
     <font  size=5><b> SENHAS</b></font>
   </th>
   <td width="5%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
 <tr>
   <td colspan="2">
     <table align="center">
        <tr>
          <td align="left"><b>Unidade:</b></td>
           <td align="left"><%= f.collection_select :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecione -- ' %>
           </td>
         </tr>
         <tr>
           <td colspan="2"align="left"><div id='unidade_nome'></div></td>
         </tr>
         <tr>
           <td valign="top"align="left"><b>De:</b></td>
           <td colspan="2" align="left"><%= f.text_field :de, :size =>44 %></td>
         </tr>
        <tr>

         <tr>
           <td valign="top"align="left"><b>Usuário</b></td>
           <td colspan="2" align="left"><%= f.text_field :usuario, :size =>44 %></td>
         </tr>
        <tr>
           <td valign="top"align="left"><b>Senha:</b></td>
           <td colspan="2" align="left">    <%= f.text_field :senha, :size =>44 %></td>
         </tr>
        <tr>
           <td valign="top"align="left"><b>Fone Instalado:</b></td>
           <td colspan="2" align="left">    <%= f.text_field :fone, :size =>44%></td>
         </tr>
         <tr>
           <td valign="top"align="left"><b>Observações:</b></td>
           <td colspan="2" align="left"><%= f.text_area(:obs, :cols =>"55", :rows => "2") %></td>
         </tr>
     </table>
       <table>
   <tr>
     <div id='Certeza'>
        <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
     </div>
     <td align="left"><input type="image" src="/stylesheets/images/salvar.png" title="Gravar"></td>
     <% end %>
   </tr>
  </table>
  </tr>
</table>
</font>
