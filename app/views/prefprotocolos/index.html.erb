 <table  class="tabelas1"   align="center" width="100%">
 <tr>
    <th align="left">
       <font size=5 color="black"> <b>  CONTROLE DE PROTOCOLOS</b></font>
    </th>
    <td width="5%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
  <tr>
    <td colspan="2">
      <table border="2" width="100%">
         <tr>
            <th width ="1%" align="center"> Protocolo</th>
            <th width ="10%">Requente</th>
            <th width ="90%">Assunto</th>
            <th width ="50%">Data</th>
            <th width ="10%">Para</th>
            <th> Encerrado</th>
            <th colspan="4"></th>

          </tr>

            <% for protocolo in @prefprotocolos %>
           <tr>
               <td><b><font color="red" size="3"><center><%=h protocolo.codigo %></center></font></b></td>
               <td><%=h protocolo.de %></td>
               <td><%=h protocolo.assunto %></td>
               <td><%=h protocolo.data.strftime("%d/%m/%y")%></td>
               <td><%=h protocolo.para %></td>
               <% if  protocolo.encerrado == 0 %>
                 <td align="center"> N√ÉO </td>
               <%  else  %>
                 <td align="center"><font color="red" > SIM</font> </td>
               <% end %>
               <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/exibir.gif", :size => "20x20"), protocolo, :title => "Exibir" %></td>
               <% if current_user.has_role?('administrador') or current_user.has_role?('oficios') %>
                <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/write.png", :size => "20x20"),  edit_prefprotocolo_path(protocolo), :title => "Despachar"%></td>
                    <% if current_user.has_role?('administrador')%>
                        <td align="center" colspan="1"><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"), protocolo, :confirm => 'Confirma Exclusao?', :method => :delete, :title => "Excluir" %></td>
                    <%end%>
               <%end%>
               
          </tr>
            <%end%>

     </table>
    </td>
</table>

