        </tr>
        <tr>
           <td align="left"><b>Encerrado:</td></b>
           <td align="left" colspan="3"> <b>SIM </b><%= f.check_box :encerrado %> EM <%= f.date_select(:data_encerramento, :order => [:day, :month, :year]) %></td>
