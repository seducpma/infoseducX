<div id="interno3">
<% title "AULASEVENTUAL".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>SUBSTITUIÇÕES</strong></font><br/>
 </div>


 <table bgcolor="#DCDCDC" width="100%">
   <tr bgcolor="#DCDCDC"  width="100%">
     <td>
       <fieldset><legend><font  size=3><b> </b></font></legend>
         <table width="100%">
           <tr bgcolor="#F5F5F5"  width="100%">

             <td valign="top">
               <table  bgcolor="#DCDCDC" width="100%">
                 <tr bgcolor="#F5F5F5">
                  <td align="left" width="10%"><b> Unidade:</b></td>
                  <td align="left" width="40%"><%#=h@aulas_eventual.unidade.tipo.nome%> <%#=h@aulas_eventual.unidade.nome%></td>
                   <td align="left" width="16%"><b>Ano Letivo:</b></td>
                   <td align="left"> <%=h @aulas_eventual.ano_letivo %> </td>
                </tr>
                <tr bgcolor="#F5F5F5" >
                   <td align="left"><b>Classe:</b></td>
                   <td align="left">  <%=h @aulas_eventual.classe.classe_classe%></td>
                   <td align="left"><b>Período:</b></td>
                   <td align="left"> <%=h @aulas_eventual.periodo %></td>
                 </tr>
                 <tr bgcolor="#F5F5F5" >
                   <td align="left"><b>Professor:</b></td>
                   <td align="left"> <%=h @aulas_eventual.eventual.professor.nome %> (<%=h @aulas_eventual.eventual.categoria %>)</td>
                   <td align="left" colspan="3" ><b>Contato:</b> <%=h @aulas_eventual.eventual.contato %></td>
                 </tr>
                 <tr bgcolor="#F5F5F5" >
                   <td align="left" colspan="4"><b> Substituição:</b> &nbsp&nbsp
                      <%if @aulas_eventual.dataI.nil? %>
                        <%#=h @aulas_eventual.data.strftime("%d/%b/%Y") %> &nbsp&nbsp 1 / 1 dia
                      <%else%>
                       <b>Inicio:</b> <%=h @aulas_eventual.dataI.strftime("%d/%b/%Y") %> &nbsp&nbsp
                       <b>Término:</b><%=h @aulas_eventual.dataF.strftime("%d/%b/%Y") %> &nbsp&nbsp
                        - &nbsp&nbsp <%= session[:data]+1 %> / <%= session[:num_faltas] %> dia(s).
                        <%end%>
                   </td>
                 </tr>
                 <tr bgcolor="#F5F5F5" >
                   <td align="left" colspan="4"><b>Em Substituição:</b>&nbsp&nbsp
                      <%=h @aulas_eventual.aulas_falta.professor.nome%>
                    - <%=h @aulas_eventual.aulas_falta.classe%> - <%=h @aulas_eventual.aulas_falta.periodo%>
                 
                   </td>
                 </tr>
                 <tr bgcolor="#F5F5F5" >
                   <td align="left" colspan="4">&nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp &nbsp&nbsp
                       <%=  session[:tipo_falta]%> de <%= session[:num_faltas]%> dia(s)
                   </td>
                 </tr>

                 <tr bgcolor="#F5F5F5" >
                   <td align="left"><b>OBS:</b></td>
                   <td colspan="3"align="left"><%=h @aulas_eventual.obs %></td>
                 </tr>
               </table>
           </td>
        </tr>
      </table>
     </fieldset>
   </td>
  </tr>
 </table>

    <table>
         <tr>
           <td width="4%"align="left"><%= button_to 'Agenda Unidade' ,aulas_eventuals_path,:id =>@aulas_eventual, :method => "get", :title => "Aulas Eventuais  " %></td>
             <td width="4%"align="left"><%= button_to 'Cadastrar' ,new_aulas_eventual_path, :title => "Cadastar  " %></td>
            <% if current_user.has_role?('admin') or current_user.has_role?('SEDUC') %>
                <td width="6%"align="left" ><%= button_to 'Editar', {:action => "edit", :id =>@aulas_eventual}, :method => "get", :title => "Editar"%></td>
                 <td width="6%"align="left" ><%= button_to 'Excluir', {:action => "destroy", :id =>@aulas_eventual}, :confirm => 'Tem certeza?',:method => "delete", :title => "Deletar"%></td>
             <%end%>
               
             <td><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
          </tr>
    </table>


</div>
<br/>
</div>






