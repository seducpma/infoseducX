    <td width ="1%" valign="top"><b>Participante:</b></td>
     <% if @participante.present? %>
        <%= @participante.nome %>
        <td valign="top">
         <%= f.hidden_field(:participante_id,:value => @participante.id) %> <%= link_to 'Cadastre-se já', new_participante_path %>

        </td>

     <%else%>
        <td width =20%"  valign="top">
           <%= f.collection_select :participante_id, @participantes, :id, :nome, :include_blank => ' -- Selecione -- ' %><br/>
           <div class="botao">
             &nbsp&nbsp<b><u>OBS:</u> 1) ANTES DE SE CADASTRAR, VERIFIQUE SE SEU NOME CONSTA NA LISTA</b><br/>
