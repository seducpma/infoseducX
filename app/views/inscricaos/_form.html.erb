<% form_for(@inscricao) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table class="tabelas" width="100%" align="center" >
   <tr>
    <th align="left">
       <font  size=5 color="black"> <b> CADASTRO DE INSCRIÇÕES</b></font>
    </th>
    <td width="5%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
  </tr>
  <tr>
  <td colspan="2">
<fieldset><legend><font size ="4"><b>Inscrição</b></font></legend>
  <table width="100%" >
  <tr>
    <td width ="1%" valign="top"><b>Participante:</b></td>
     <% if @participante.present? %>
        <%= @participante.nome %>
        <td  valign="top">
         <%= f.hidden_field(:participante_id,:value => @participante.id) %> <%= link_to 'Cadastre-se já', new_participante_path %>
        </td>

     <%else%>
        <td width =20%"  valign="top">
           <%= f.collection_select :participante_id, @participantes, :id, :nome, :include_blank => ' -- Selecione -- ' %><br/>
           <font color="blue">Se nome não consta na lista acima, favor cadastrar =></font>
          <%= link_to image_tag("/stylesheets/images/cadastrar.gif", :size => "30x30"), new_participante_path, :title => "Cadastrar Participante" %>
         </td>
         <!--
        <td colspan="">
          <font color="blue"><b>Curso disponível somente para quem   cursou o módulo I</b>

        </td>-->
     <%end%>

  </tr>
  <tr>
    <td colspan="4">
          <%= observe_field  :inscricao_participante_id,
              :with => :inscricao_participante_id,
              :url => { :action => 'sel_participa' } %>
    </td>
  </tr>
  <tr>
    <td colspan="4">
     <%if @participante.present?%>
      Matricula: <%=h @participante.matricula %><br/>
      Nome:<%=h @participante.nome %><br/>
      Cidade:<%=h @participante.cidade %><br/>
      Email:<%=h @participante.email %><br/>
        Observações: <%=h @participante.obs %><br/>
    <%else%>
      <div id="informacoes"></div>
    <%end%>
    </td>
  </tr>
 </table>

   <table class="tabelas" align="center"  width="100%">
     <tr>
      <th colspan="2" style=" font-size: large">CURSOS  </th>
     </tr>
    <tr>
      <td colspan="2">
         <b>Selecione o(s) curso(s) desejado(s)</b>
      </td>
    </tr>
     <% @cursos.in_groups_of(2, false) do |row_cursos| %>
      <tr>
        <% row_cursos.each do |curso| %>
            <%if curso.existe_vaga %>
             <td id="demo" align="left"><%= check_box_tag "inscricao[curso_ids][]", curso.id, @inscricao.cursos.include?(curso), :title => "#{curso.ementa}"%><%= "#{curso.nome_curto} - #{curso.qtde}/#{curso.vagas_disponiveis}" %></td>
            <%else%>
              <td><%= "CURSO #{curso.nome}"%>  <br/>
                <font color="red"> <b>Nº DE VAGAS COMPLETO </b></font> </td>
            <%end%>
        <%end%>
      </tr>
    <%end%>
      <tr>
        <th colspan="2"><font size="2">
          <u>Obs:</u> Cursos com <b>*</b> disponíveis somente para professores da SEDUC no exercício da função <br/>
          &nbsp&nbsp&nbsp&nbsp&nbspPara maiores informações sobre o curso, posicione o mouse sobre a caixa de opção</font></th>
      </tr>
  </table>

</fieldset>

         <table width="100%" align="left">
           <tr>
               <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
               <td align="left"><input type="image" src="/stylesheets/images/salvar.png" title="Gravar"></td>
           </tr>
       </table>
      <% end %>
    </td>
  </tr>
  </table>
</font>







