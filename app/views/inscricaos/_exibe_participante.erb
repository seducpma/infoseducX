<table width="92%" align="center" >
    <% if @inscricao.present?  %>
        <tr>
           <td colspan="3">
             <div class="botao"></div>
             &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
           <b style="color:red">&#183 <%= "PARTICIPANTE JA POSSUI INSCRIÇÃO. VER INCRIÇÔES" %> ============================>&nbsp&nbsp<%= link_to image_tag("/stylesheets/images/listar.png", :size => "30x30"), consultas_inscricaos_path %></b><br/>
           </div>
          </td>
       </tr>
    <%end%>
    <tr>
        <td colspan="3">
          <div class="botao">
            &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
            <font color="blue"><b>&#183 Se necessário, atualizar Cadastro</b> ==========================================></font>&nbsp&nbsp<%= link_to image_tag("/stylesheets/images/write.png", :size => "30x30"), edit_participante_path(@dadosparticipa), :title => "Atualizar Cadastro" %>
          </div>
        </td>
    </tr>
    <tr>
      <td width="70%"><br/>
                Nome:<%=h @dadosparticipa.nome %>
              <%if @dadosparticipa.unidade_id.nil?%>
                 <br/>
              <%else%>
                 -  Matricula: <%=h @dadosparticipa.matricula %><br/>
             <%end%>
            Unidade:<%if @dadosparticipa.unidade_id.nil?%>
                   Não é funcionário da SEDUC
                <%else%>
                 <%=h @dadosparticipa.unidade.nome %>
             <%end%>
            <br/>Email:
              <%if @dadosparticipa.email.nil?%>
                 <font color="red"><b> NÃO CONSTA E-MAIL NO CADASTRO - <u><%= link_to 'FAVOR ATUALIZAR CADASTRO', edit_participante_path(@dadosparticipa) %></u> </b></font> <br/>
             <%else%>
                 <%=h @dadosparticipa.email %><br/>
             <%end%>
              <%if @dadosparticipa.obs.nil?%>
                 <br/>
              <%else%>
                Obs: <%if @dadosparticipa.email == 'EMAIL NÃO CADASTRADO'%>
                          <font color="red" size="4"><b>PARA FAZER INSCRIÇÃO É OBRIGATÓRIO CONSTAR SEU E_MAIL NO CADASTRO <br/>
                              &nbsp&nbsp&nbsp<blink><u>FAVOR ATUALIZAR SEU CADASTRO ANTES DE PROSSEGUIR.</u></blink></b></font><BR/><BR/>
                              &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp
                              <u><%= link_to 'CLIQUE AQUI PARA ATUALIZAR SEU CADASTRO', edit_participante_path(@dadosparticipa) %></u> </b>
                      <%else%>
                         <%=h @dadosparticipa.obs %><br/>
                      <%end%>
               <%end%>
      
        </td>
    </tr>
  </table>

