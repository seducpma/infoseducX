<table class="tabelas1" align="center" width="80%">
 <tr>
   <th colspan="2" align="left">
      <font  size=5 color="black"> <b> INSCRIÇÕES POR CURSOS </b></font>
   </th>
  </tr>
  <tr>
    <td>
      <br/>
      <div class="botao">
       <table width="100%">
       <tr>
            <% form_for @search do |f| %>
              <tr>
                <td width ="40%"align="left">
                  <b><font size="3">Curso:</b></font>
                  <%= f.select :cursos_id_equals, Curso.all.collect {|p| [ p.nome_curto, p.id ]}, :include_blank => true%>
                </td>
                <td align="left" colspan="2">
                    <input type="image" src="/stylesheets/images/buscar.png" title="Buscar">
                  
                </td>
              </tr>
           <% end %>
          </tr>
        </table>
     </div>
        <table width="100%" align="center" class="tabelas1"  border="1">

            <%if @curso.present? %>
                <h2 align="center">Inscrições no curso "<%= params[:search] ? Curso.find(params[:search][:cursos_id_equals]).nome_curto : "Selecione" %>"</h2>
                <tr>
                  <th>Matrícula</th>
                  <th>Nome</th>
                  <th>Unidade</th>
                </tr>
                <% @curso.each do |inscricao| %>
                  <tr>
                    <td align="center"><%=h inscricao.participante.matricula %></td>
                    <td align="center"><%=h inscricao.participante.nome %></td>
                    <%  if inscricao.participante.tipo_participante == 2 %>
                      <td align="center"><%=h "Externo" %></td>
                    <%else%>
                      <td align="center"><%=h inscricao.participante.unidade.nome %></td>
                    <%end%>
                  </tr>
                <%end%>

            <tr>
              <th colspan="3" align="left"> <b><%= "Existe(m) #{@curso.count} participante(s) inscrito(s) " %></b></th>
            </tr>
          <% end %>
          </table>



       <div class="botao">
        <table width="100%" align="left">
          <tr>
            <td align="left" width="4%"><%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"),  homes_path, {:method => "get"}, :title => "Voltar"%></td>
            <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>
          </tr>
       </table>
      </div>
    </td>
  </tr>
</table>
