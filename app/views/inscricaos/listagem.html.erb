
   <% form_remote_tag :url => listagem_inscricaos_path, :method => :get do %>
         <table width="100%" align="center" bgcolor="#DCDCDC" >
          <tr>
            <td>
               <%= label_tag :curso, "Curso" %>
               <%= collection_select(:curso, :get, @cursos, :id,:nome_curto) %>
            </td>
            <td><%= submit_tag "Busca" %></td>
          </tr>
          <tr><td colspan="2"><hr/></td></tr>
         <tr>
           <td><div id="lista"><% if params[:curso].present? %><%= render "inscritos2" %><%end%></div>
           </td>
         </tr>
         </table>
    <% end %>
