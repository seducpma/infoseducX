<div id="interno6">
    <% title "CLASSES".singularize %>
    <div class="tabs">
        <div id="caixa_titulo">
            <font size="3"><strong>MANUTENÇÃO INFORMÁTICA</strong></font><br/>
        </div>
        <div class="tabs">
            <table width="100%" align="center"  bgcolor="#F5F5F5" >
                <tr bgcolor ="#E6E2D">
                    <td align="left">
                        <font  size=5 color="black"> <b> ORDEM DE SERVIÇO - INFORMÁTICA</b></font>
                        <hr/>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table>
                            <tr>
                                <td width="40%" valign="TOP">
                                    <%= render 'formshow1' %>
                                </td>
                                <td width="60%" valign="top">
                                    <fieldset><legend><font  size=4> Atendimento</font></legend>
                                        <% form_for(@chamados) do |f| %>
                                            <%= f.error_messages %>
                                            <table>
                                                <tr>
                                                    <td align="left" width="20%"><b>Data Atendimento:</b></td>
                                                    <td align="left"><%= f.date_select(:data_aten, :order => [:day, :month, :year], :start_year => (Date.today.year))%></td>
                                                </tr>
                                                <tr>
                                                    <td align="left"><b>Funcionário:</b></td>
                                                    <td align="left"><%= f.collection_select :estagiario_id, @estagiarios, :id, :nome, :include_blank => ' -- Selecionar -- ', :size=> 20 %></td>
                                                </tr>
                                                <tr>
                                                    <td align="left"><b>Tipo Problema:</b></td>
                                                    <td align="left"><%= f.collection_select :tipos_problema_id, @tipos, :id, :tipo, :include_blank => ' -- Selecionar -- '%></td>
                                                </tr>
                                                <tr>
                                                    <td align="left"><b>Patrimônio:</b></td>
                                                    <td align="left"><%= f.text_field :patrimonio, :size => 6  %>
                                                        <b>Local Atendimento:</b>
                                                        <%= f.select :local, LOCAL, :include_blank => '---Selecionar---',  :size =>20  %>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td align="left" valign="top"><b>Procedimentos executados:</b></td>
                                                    <td align="left"><%= f.text_area :procedimentos, :cols =>"60", :rows => "5" %></td>
                                                </tr>
                                                <tr>
                                                    <td align="left"><b>Situação Chamado:</b></td>
                                                    <td align="left"><%= f.collection_select :situacao_chamado_id, @situacaos, :id, :situacao, :include_blank => ' -- Selecionar -- '%></td>
                                                </tr>
                                                <tr>
                                                    <td align="left"><b>Término:</b></td>
                                                    <td align="left">    <%= f.date_select(:data_enc, :order => [:day, :month, :year], :start_year => (Date.today.year), :end_year => (Date.today.year + 5)) %><BR /></td>
                                                </tr>
                                            </table>
                                        </fieldset>
                                    </td>
                                </tr>
                                <table>
                                    <tr bgcolor ="#E6E2D">

                                    <div id='Certeza'>
                                        <td width="5%"align="left"><%= f.submit "Salvar" %></td>
                                    </div>
                                <%end%>
                                <td width="6%"align="left" > <%= button_to('Fechar', home_path, :method => "get", :title => "Fechar")%></td>
                                <td align="left" ><%= button_to('Voltar', chamados_path, :method => "get", :title => "Voltar")%></td>

                                </tr>
                            </table>

                        </table>
                    </td>
                </tr>
            </table>
            </font>
        </div>
    </div>
    <br/>
</div>
<br/>

