                <td align="left"><%=h professor.professor.nome%></td>
                <td align="center"><%=h professor.categoria%></td>
                <td align="center"><%=h professor.unidade.nome%></td>
                <td align="center"><% if  professor.nao_atua == 1%>
                                       NÃ£o
                                   <%else%>
                                       Sim
                                   <%end%>
