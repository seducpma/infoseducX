<font size="2">
<table  class="tabelas1" width="100%"align="center">
    <tr>
    <th align="left">
       <font  size=5 color="black"> <b> ORDEM DE SERVIÇO DE MANUTENÇÃO</b></font>
    </th>
    <td width="3%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
  </tr>
  <tr>
    <td  colspan="2">
     <table>
       <tr>
         <td width="40%" valign="TOP">
           <%= render 'formshow' %>
         </td>
                       <td valign="top">
                <fieldset><legend><font  size=4> Encaminhamento</font></legend>
                   <table>
                     <tr>
                       <td align="left"><b>Despacho:</b></td>
                       <%if @manutencao.procedimentos.nil?%>
                          <td align="left"> <font color ="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                           <td align="left"><%=h @manutencao.procedimentos%></td>
                       <%end%>
                     </tr>
                     <tr>
                      <td align="left"><b>Para:</b></td>
                      <%if @manutencao.chefia_id.nil?%>
                      <td align="left"> <font color="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                         <td align="left"><%=h @manutencao.chefia.nome  %></td>
                      <%end%>
                     </tr>
                     <tr>
                       <td align="left"><b>Data:</b></td>
                       <%if @manutencao.data_ate.nil?%>
                       <td align="left"> <font color ="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                         <td align="left"><%=h @manutencao.data_ate.strftime("%d/%b/%Y" ) %></td>
                       <%end%>
                     </tr>
                   </table>
                </fieldset>
              </td>
         <td valign="top">
         <fieldset><legend><font  size=4> Atendimento</font></legend>
           <table>
              <tr>
                <td align="left" width="20%"><b>Data Atendimento:</b></td>
                <%if @manutencao.data_ate.nil?%>
                    <td align="left"> <font color="red">Serviço não executado</font></td>
                <%else%>
                    <td align="left"><%=h @manutencao.data_ate.strftime("%d/%b/%Y") %></td>
                <%end%>
              </tr>
              <tr>
                    <td align="left" width="20%"><b>Hora Atendimento:</b></td>
                <%if @manutencao.data_ate.nil?%>
                   <td align="left"> <font color="red">Serviço não executado</font></td>
                <%else%>
                    <td align="left"><%=h @manutencao.data_ate.strftime("%H:%M horas")%></td>
                <%end%>
              </tr>
              <tr>
                <td align="left"><b>Funcionário:</b></td>
               <%if @manutencao.unidade_id.nil?%>
                  <td><font color="red">ERRO no registro nº<%=h @manutencao.id %></font></td>
               <%else%>
                  <%if @manutencao.data_enc.nil?%>
                    <td align="leff"></td>
                  <%else%>
                        <%if @manutencao.funcionario.nil?%>
                            <td align="left"><%=h@manutencao.user.login%> </td>
                        <%else%>
                            <td align="left"><%=h @manutencao.funcionario.nome %></td>
                        <%end%>
                  <%end%>

              </tr>
               <%end%>
                   <tr>
                      <td valign="top"><b>Serviços Solicitados:</b></td>
                      <td>
                         <% @manutencao.tipos_manutencaos.each do |servico| %>
                          - <%=h servico.servico%><br/>
                         <% end %>
                      </td>
                  </tr>

           <tr>
              <td align="left" valign="top"><b>Procedimentos executados:</b></td>
              <td align="left"><%=h @manutencao.procedimentos %></td>
           </tr>
           <tr>
              <td align="left"><b>Situação Chamado:</b></td>
              <td align="left"><%=h @manutencao.situacao_manutencao.situacao %></td>
           </tr>
           <tr>
             <td align="left"><b>Término:</b></td>
              <%if @manutencao.data_enc.nil?%>
                  <td align="left"> <font color="red">Serviço não executado</font></td>
                  <%else%>
                    <td align="left"><%=h @manutencao.data_enc.strftime("%d/%b/%Y") %></td>
                  <%end%>

           </tr>
         </table>
        </fieldset>
      </td>
     </tr>
       <div class="botao">
         <table width="50%" align="left">
          <tr>
             <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
             <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>
          </tr>
        </table>
       </div>
      </table>
    </td>
  </tr>
 </table>
</font>

