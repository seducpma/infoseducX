<% if current_user.has_role?('administrador') or current_user.has_role?('chefia_manutencao') or current_user.has_role?('admin_manutencao')  %>
     <br/>
      <font size="2">
      <table  class="tabelas " width="50%"align="center">
       <tr>
          <th align="left">
             <font  size=5 color="black"> <b> SOLICITAÇÃO DE ORDEM DE SERVIÇO</b></font>
          </th>
          <td width="3%">
           <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
         </td>
         </tr>
       <tr>
         <td colspan="3">
          <font  size="2">
           <table width="100%">
            <tr>
              <td>
                 <fieldset><legend><font  size=4> Solicitação</font></legend>
                 <table>
                   <tr>
                         <td align="left"><b>Nº Protocolo:  </b></td>
                         <td align="left"><%=h @manutencao.id%></td>
                   </tr>
                   <tr>
                     <td align="left"><b>Data Solicitação:</b></td>
                     <td align="left"><%=h @manutencao.data_sol.strftime("%d/%m/%Y" ) %></td>
                   </tr>
                   <tr>
                     <td align="left"><b>Horas Solicitação:</b></td>
                     <td align="left"><%=h @manutencao.data_sol.strftime("%H:%M horas") %></td>
                   </tr>
                   <tr>
                     <td align="left"><b>Solicitante</b></td>
                     <td align="left"><%=h @manutencao.solicitante %></td>
                   </tr>
                   <tr>
                     <td align="left" valign="top"><b>Unidade:</b></td>
                     <td align="left"> <%=h @manutencao.unidade.nome %></td>
                   </tr>
                   <tr>
                     <td align="left"><b>Forma Solicitação:</b></td>
                     <td align="left"><%=h @manutencao.forma %></td>
                   </tr>
                   <tr>
                      <td valign="top"><b>Serviços Solicitados:</b></td>
                      <td>
                         <% @manutencao.tipos_manutencaos.each do |servico| %>
                          - <%=h servico.servico%><br/>
                         <% end %>
                      </td>
                  </tr>
                   <tr>
                     <td align="left" valign="top"><b>Descrição Problema:</b></td>
                     <td align="left"><%=h @manutencao.descricao %></td>
                   </tr>
                   <tr>
                     <td align="left"><b>Quem abriu:</b></td>
                     <td align="left"><%=h @manutencao.user.name%></td>
                   </tr>
                   <tr>
                     <td align="left"><b>Observação:</b></td>
                     <td align="left"><%=h @manutencao.obs%></td>
                   </tr>
                  </table>
                </fieldset>
              </td>
              <td valign="top">
                <fieldset><legend><font  size=4> Encaminhamento</font></legend>
                   <table>
                     <tr>
                       <td align="left"><b>Despacho:</b></td>
                       <%if @manutencao.procedimentos.nil?%>
                          <td align="left"> <font color ="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                           <td align="left"><%=h @manutencao.procedimentos%></td>
                       <%end%>
                     </tr>
                     <tr>
                      <td align="left"><b>Para:</b></td>
                         <%if (@manutencao.situacao_manutencao.situacao == 'EM ATENDIMENTO') or (@manutencao.situacao_manutencao.situacao == 'AGUARDANDO COMPRAS') %>
                          <td align="left"> <%=h @manutencao.situacao_manutencao.situacao%></td>
                       <%else%>
                          <%if @manutencao.chefia_id.nil?%>
                             <td align="left"> <font color="red">Serviço sem encaminhamento</font></td>
                          <%else%>
                            <td align="left"><%=h @manutencao.chefia.nome  %></td>
                         <%end%>
                       <%end%>
                     </tr>
                     <tr>
                       <td align="left"><b>Data:</b></td>
                       <%if @manutencao.data_ate.nil?%>
                       <td align="left"> <font color ="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                         <td align="left"><%=h @manutencao.data_ate.strftime("%d/%b/%Y" ) %></td>
                       <%end%>
                     </tr>
                   </table>
                </fieldset>
              

              </td>
              <td valign="top">
                <fieldset><legend><font  size=4> Serviço</font></legend>
                   <table>
                     <tr>
                       <td  valign="top"align="left"><b>Serviço Executado:</b></td>
                       <%if @manutencao.executado.nil?%>
                       <td align="left"> <font color="red">Serviço não executado</font></td>
                       <%else%>
                          <td align="left"><%=h @manutencao.executado%></td>
                       <%end%>
                     </tr>
                      <tr>
                       <td align="left"><b>Por:</b></td>
                       <%if @manutencao.funcionario_id.nil?%>
                       <td align="left"> <font color="red">Serviço não executado</font></td>
                       <%else%>
                          <td align="left"><%=h @manutencao.funcionario.nome%></td>
                       <%end%>
                      </tr>
                     <tr>
                       <td align="left"><b>Data:</b></td>
                       <%if @manutencao.data_enc.nil?%>
                       <td align="left"> <font color="red">Serviço não executado</font></td>
                       <%else%>
                        <td align="left"><%=h @manutencao.data_enc.strftime("%d/%m/%Y" ) %></td>
                       <%end%>
                     </tr>
                 </table>
                </fieldset>
             <div class="botao">
             <table>
              <tr>
                <td align="left" width="4%"><%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"),  homes_path, {:method => "get"}, :title => "Voltar"%></td>
                <% if current_user.has_role?('administrador') or current_user.has_role?('admin_manutencao') %>
                  <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/write.png", :size => "30x30"), {:action => "despacho", :id =>@manutencao}, :method => "get", :title => "Encaminhar" %></td>
               <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/listar.png", :size => "30x30"), {:action => "ordemservico", :id =>@manutencao }, :method => "get", :title => "Ordem de Serviço" %></td>
               <%end%>
               <td  width="6%" align="left" ><b><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:MM_openBrWindow('#{protocolo_manutencaos_path($idprotocolo)}','protocolo', 'scrollbars=yes');", :title => "Imprimir Protocolo" %></b></td>
               <td align="left" ><%= link_to image_tag("/stylesheets/images/imprimir.jpg", :size => "30x30"), onclick="javascript:window.print()", :title => "Imprimir" %></td>

              </tr>
            </table>
            </div>


              </td>
            </tr>

           </table>
         </font>
       </td>
       </tr>
      </table>
      </font>
      <br/>
<%else%>
     <br/>
      <font size="2">
      <table  class="tabelas" width="50%"align="center">
        <tr>
        <th align="left">
           <font  size=5 color="black"> <b> ORDEM DE SERVIÇO DE MANUTENÇÃO</b></font>
        </th>
        <td width="7%">
         <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
       </td>
      </tr>
       <tr>
         <td colspan="2">
          <font  size="2">
           <table width="100%">
            <tr>
              <td>
                <%= render 'formshow' %>
              </td>
            </tr>
            <div class="botao">
            <tr>
              <td>
                <font><b>
                    <ul>
                      <li> IMPRIMA E GUARDE ESTE PROTOCOLO</li>
                      <li> ESTA ORDEM DE SERVIÇO SERÁ ATENDIDA ASSIM QUE POSSÍVEL</li>
                      <li> QUALQUER DÚVIDA ENTRAR EM CONTARO COM A SEDUC</li>
                     </ul>
                </b></font>
               </td>
            </tr>
            </div>
           </table>
            <div class="botao">
             <table>
              <tr>
                <td align="left" width="4%"><%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"),  homes_path, {:method => "get"}, :title => "Voltar"%></td>
                <% if current_user.has_role?('administrador') or current_user.has_role?('estagiario SEDUC') %>
                  <td align="left" width="4%" ><%= link_to image_tag("/stylesheets/images/edit.png", :size => "25x25"), edit_manutencao_path(@manutencao), :title => "Alterar"%></td>
                <%end%>
                <td align="left" ><b><%= link_to image_tag("/stylesheets/images/imprimir.png", :size => "30x30"), onclick="javascript:MM_openBrWindow('#{protocolo_manutencaos_path($idprotocolo)}','protocolo', 'scrollbars=yes');", :title => "Visualizar Imprimir" %></b></td>
              </tr>
            </table>
            </div>
         </font>
       </td>
       </tr>
      </table>
      </font>
      <br/>
<%end%>


