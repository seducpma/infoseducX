<div id="interno1">
<% title "GERENCIAMENTO DE USUÁRIOS", :id =>"users" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>ORÇAMENTO SEDUC/PMA - FICHAS</strong></font><br/>
   </div>
  <div class="tabs">
    <br/>
    <table bgcolor="#DCDCDC" width="100%">
        <tr bgcolor="#DCDCDC" >

            <td align="center"><b>Ano </b></td>
            <td align="center"><b>Nº</b></td>
            <td align="center"><b>Ficha</b></td>
            <td align="center"><b>Codigo</b></td>
            <td align="center"><b>Un.Orçamentaria</b></td>
            <td align="center"><b>Despesa</b></td>
            <td align="center"><b>DR</b></td>
            <td align="center"><b>fonte</b></td>
          </tr>
          <% @orc_fichas.each  do |ficha| %>
            <tr  bgcolor="#F5F5F5">
              <td align="center"><%=h ficha.ano %></td>
              <td align="center"><%=h ficha.ficha %></td>
              <td align="center"><%=h ficha.descricao %></td>
              <td align="center"><%=h ficha.codigo %></td>
              <td><%=h ficha.orc_uni_orcamentaria.descricao %></td>
              <td><%=h ficha.orc_uni_orcamentaria.orc_uni_despesa.descricao %></td>
              <td align="center"><%=h ficha.dr %></td>
              <td align="center"><%=h ficha.fonte %></td>
              <td colspan="7" align="right" ><%= button_to 'Visualizar',{:action => "show", :id =>ficha}, :method => "get", :title => "Visualizar"%> </td>
              <td align="right"><%= button_to 'Editar',{:action => "edit", :id =>ficha}, :method => "get", :title => "Editar"%> </td>
              <td align="center"><%= button_to 'Excluir', ficha, :confirm => 'Confirma Exclusao?', :method => :delete, :title => "Excluir" %></td>
            </tr>
          <% end %>
    </table>
<div id='status' style='display:none;' align="center" ><%= image_tag("/stylesheets/images/loading.gif") %></div>  </div>
    <br/>
  <table>
       <tr>
         <td width="2%"align="left"  ><%= button_to('Fechar', home_path, :method => "get", :title => "Fechar")%></td>
         <td width="2%" align="left" ><%= button_to('Fichas', orc_fichas_path, :method => "get",  :title => "Fichas")%></td>
         <td  align="left" ><%= button_to('Cadastrar', new_orc_ficha_path, :method => "get",  :title => "Unidades Orçamentarias")%></td>

      </tr>
  </table>
 </div>
