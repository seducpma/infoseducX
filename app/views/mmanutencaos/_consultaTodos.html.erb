<table width="100%" align="center" >
   <tr>
       <%if session[:encerrados]==1%>
           <td align= "right"><font size="2"><b class="label_busca3">Período:  Inicio:</b></font>&nbsp
                 <%= datepicker_tag(:enc_pal, :inicio,{:size => 10},{ :dateFormat => "'dd-mm-yy'", :changeYear => true, :changeMonth => true, :yearRange => "'-90:+0'", :buttonImage => "'/stylesheets/images/datepicker.gif'",:showOn =>  "'both'" }) %>
