       <%end%>
     <td colspan="2"align="right"left"><font size="2"> <b class="label_busca">Palavra para Busca:</b></font>
         <%= text_field_tag :palavra, params[:palavra], :class=> "txt_busca" %>
         <%= submit_tag "Filtrar", :class => "btn_filtrar" %>
     </td>
   </tr>
  </table>