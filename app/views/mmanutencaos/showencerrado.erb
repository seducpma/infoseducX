                       <td valign="top">
                <fieldset><legend><font  size=4> Encaminhamento</font></legend>
                   <table>
                     <tr>
                       <td align="left"><b>Despacho:</b></td>
                       <%if @mmanutencao.procedimentos.nil?%>
                          <td align="left"> <font color ="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                           <td align="left"><%=h @mmanutencao.procedimentos%></td>
                       <%end%>
                     </tr>
                     <tr>
                      <td align="left"><b>Para:</b></td>
                      <%if @mmanutencao.chefia_id.nil?%>
                      <td align="left"> <font color="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                         <td align="left"><%=h @mmanutencao.chefia.nome  %></td>
                      <%end%>
                     </tr>
                     <tr>
                       <td align="left"><b>Data:</b></td>
                       <%if @mmanutencao.data_ate.nil?%>
                       <td align="left"> <font color ="red">Serviço sem encaminhamento</font></td>
                       <%else%>
                         <td align="left"><%=h @mmanutencao.data_ate.strftime("%d/%b/%Y" ) %></td>
                       <%end%>
                     </tr>
                   </table>
                </fieldset>
              </td>
         <td valign="top">
         <fieldset><legend><font  size=4> Atendimento</font></legend>
           <table>
              <tr>
                <td align="left" width="20%"><b>Data Atendimento:</b></td>
                <%if @mmanutencao.data_ate.nil?%>
                    <td align="left"> <font color="red">Serviço não executado</font></td>
                <%else%>
                    <td align="left"><%=h @mmanutencao.data_ate.strftime("%d/%b/%Y") %></td>
                <%end%>
              </tr>
              <tr>
                    <td align="left" width="20%"><b>Hora Atendimento:</b></td>
                <%if @mmanutencao.data_ate.nil?%>
                   <td align="left"> <font color="red">Serviço não executado</font></td>
                <%else%>
                    <td align="left"><%=h @mmanutencao.data_ate.strftime("%H:%M horas")%></td>
                <%end%>
              </tr>
              <tr>
                <td align="left"><b>Funcionário:</b></td>
               <%if @mmanutencao.unidade_id.nil?%>
                  <td><font color="red">ERRO no registro nº<%=h @manutencao.id %></font></td>
               <%else%>
                  <%if @mmanutencao.data_enc.nil?%>
                    <td align="leff"></td>
                  <%else%>
                        <%if @mmanutencao.funcionario.nil?%>
                            <td align="left"><%=h@mmanutencao.user.login%> </td>
                        <%else%>
                            <td align="left"><%=h @mmanutencao.funcionario.nome %></td>
                        <%end%>
                  <%end%>

              </tr>
               <%end%>
                   <tr>
                      <td valign="top"><b>Serviços Solicitados:</b></td>
                      <td>
                         <% @mmanutencao.tipos_manutencaos.each do |servico| %>
                          - <%=h servico.servico%><br/>
                         <% end %>
                      </td>
                  </tr>

           <tr>
              <td align="left" valign="top"><b>Procedimentos executados:</b></td>
              <td align="left"><%=h @mmanutencao.procedimentos %></td>
           </tr>
           <tr>
              <td align="left"><b>Situação Chamado:</b></td>
              <td align="left"><%=h @mmanutencao.situacao_manutencao.situacao %></td>
           </tr>
           <tr>
             <td align="left"><b>Término:</b></td>
              <%if @mmanutencao.data_enc.nil?%>
                  <td align="left"> <font color="red">Serviço não executado</font></td>
                  <%else%>
                    <td align="left"><%=h @mmanutencao.data_enc.strftime("%d/%b/%Y") %></td>
                  <%end%>

           </tr>
         </table>
        </fieldset>
      </td>
     </tr>
