

<% form_for @funcionario, :html => { :multipart => true } do |f| %>
<%= f.error_messages %>
<font  size="2">
<table class="tabelas" width="100%"  align="center">
 <tr>
    <th align="left"><font size=5> <b>SERVIDOR DA SEDUC</b></font></th>
    <td width="7%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
   <tr>
     <td colspan="2">
       <fieldset><legend><font  size=4> Dados Pessais</font></legend>
         <table width="100%">
            <tr>
              <td align="left"><b>Nome:</b></td>
              <td align="left"><%= f.text_field :nome, :size =>40 %></td>
            </tr>
           <tr>
              <td align="left"><b> Matrícula:</b></td>
              <td align="left"> <%= f.text_field :matricula, :size => 5%>
                 <b>Chefia:</b><%= f.collection_select  :chefia_id, @chefias, :id, :nome, :include_blank => ' -- Selecione -- ' %>
             </td>
           </tr>
           <tr>
             <td align="left"><b> Situação:</b></td>
             <td>
                  <%= f.check_box :desligado %><b>Desligado da SEDUC</b>
             </td>
           </tr>
           <tr>
             <td width="10%"align="left"><b>Setor:</b></td>
             <td></b><%= f.text_field :setor, :size => 40 %></td>
           </tr>
           <tr>
             <td align="left" valign="TOP"><b> Atribuições:</b></td>
              <td align="left"><%= f.text_area(:atribuicao, :cols =>"56", :rows => "4")  %></td>
           </tr>
            <tr >
                <td valign="top"><b>Observações:</b></td>
                <td valign="top"><%= f.text_area(:obs, :cols =>"56", :rows => "4") %></td>
            </tr>
         </table>
      </fieldset>
      <div class="botao">
        <table width="100%" align="left">
           <tr>
              <td width="6%"align="left" > <%= link_to image_tag("/stylesheets/images/voltar.png", :size => "40x40"), homes_path, :title => "Voltar" %></td>
              <td align="left"><input type="image" src="/stylesheets/images/salvar.png" title="Gravar"></td>
<% end %>
            </tr>
        </table>
      </div>
    </td>
   </tr>
  </table>
</font>