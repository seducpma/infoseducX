    <div class="tabs">
    <table bgcolor="#DCDCDC" width="100%">
        <tr bgcolor="#DCDCDC" >
            <th width="40">Matricula</th>
            <th width="300">Nome</th>
            <th width="200">Função</th>
            <th width="200">Unidade</th>
            <th colspan="3"></th>
        </tr>
           <%$t=0%>
           <% @funcionarios.each do |funcionario| %>
           <%$t = $t+1%>
             <tr bgcolor="#F5F5F5">
                <td align="left"><%=h funcionario.matricula%></td>
                <td align="left"><%=h funcionario.nome%></td>
                <td align="center"><%=h funcionario.funcao%></td>
                <td align="center"><%=h funcionario.unidade.nome%>
                                 
                </td>
                <td align="center"><%= button_to('Visualizar', {:action => "show", :id =>funcionario},:method => "get", :title => "Visualizar") %></td>
               <% if ((current_user.has_role?('admin') or current_user.has_role?('SEDUC') or  current_user.has_role?('diretor_unidade')) )%>
                    <td align="center"><%= button_to 'Editar', {:action => "edit", :id =>funcionario}, :method => "get", :title => "Editar"%></td>
                <%else%>
                    <td align="center"> --- </td>
                <%end%>

              </tr>
            <% end %>



     </table>
     <table bgcolor="#DCDCDC" width="100%">
      <tr >
        <td colspan="3" align="right"><b>TOTAL: </b>
            <font color ="red "size="2"><b><%=$t %></b></font>
          </td>
      </tr>
    </table>
  </div>
