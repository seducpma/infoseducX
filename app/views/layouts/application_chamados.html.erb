                            <li><a href="http://youtu.be/-B-gxSZyNHQ">Configuração WDS</a></li>
                          </ul>
                         </li>
                     </ul>
                  </li>
                  <li><%= link_to 'Upload',anexos_path %></li>
                </ul>
              </li>

 
            
             <li><span class="divider divider-vert" ></span></li>
                <li><a class="item-primary" href="#;">Ordem Serviço</a>
                  <ul style="width:108px;">

                   <li><a>Informática</a>
                    <ul style="width:108px;">
                     <li><a>OS Interno</a>
                       <ul>
                         <li><%= link_to "Abrir",new_chamado_path %></li>
                         <li><%= link_to "Consultas", busca_protocolo_chamados_path  %></li>
                         <li><%= link_to "Em Aberto", chamados_path %></li>
                         <li><%= link_to "Encerrados", encerrados_path  %></li>
                      </ul>
                     </li>
                     <li><a href=>OS Externo</a>
                       <ul>
                         <li><%= link_to "Abrir", new_c_externo_path %></li>
                         <li><%= link_to "Em Aberto", c_externos_path %></li>
                         <li><%= link_to "Encerrados", exencerra_path  %></li>
                       </ul>
                     </li>

                    </ul>
                  </li>
                </ul>
              </li>
            


              <li><span class="divider divider-vert" ></span></li>
              <li><a class="item-primary" href="#">Reservas</a>
                 <ul style="width:108px;">
                      <li><%= link_to('Datashow', emprestimos_path) %></li>
                      <li><%= link_to('Sala/Auditório', reservar_salas_path) %></li>
                </ul>
              </li>
              <li><span class="divider divider-vert" ></span></li>
              <li><a class="item-primary" href="#">Unidades</a>
                 <ul style="width:108px;">
                       <li><a>Consultar</a>
                           <ul>
                             <li><a href="https://www.google.com/maps/d/edit?hl=pt-BR&authuser=0&mid=zNj5sTNCo6CY.kex3W_prFKOA">Localização</a></li>

                             <li><%= link_to('por Endereço', c_uni_end_path) %></li>
                             <li><%= link_to('por Nome', c_uni_uni_path) %></li>
                             <li><%= link_to('por Tipo', c_uni_tp_path) %></li>
                             <li><%= link_to('Todas', unidades_path)%></li>
 

                           </ul>
                       </li>
                       <li><span class="divider divider-horiz" ></span></li>
                       <li><%= link_to "Mapa", geo_path%></li>

                           <li><%= link_to "Itinerantes", itinerarios_path%></li>

                 </ul>
              </li>
        </div>
      </div>
   </div>
   
  <div id="principal">

        <%= yield  %>

    </div>
</div>
</body>
</html>