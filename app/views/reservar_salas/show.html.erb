<br/>
<table  class="tabelas" width="50%"align="center">
  <tr>
   <th align="left">
     <font  size=5><b> RESERVA DE SALA / AUTIDÓRIO</b></font>
   </th>
    <td width="10%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  reservar_salas_path, {:method => "get"}, :title => "Fechar"%></center>
    </td>
  </tr>
  <tr>
    <td colspan="2">
      <table>
        <tr>
           <td align="left"><font size=2><b>Local:</b></font></td>
           <td align="left"><font size=2><%=h @reservar_sala.sala.sala%></font></td>
        </tr>
        <tr>
           <td align="left"><font size=2><b>Data Reserva:</b></font></td>
           <td align="left"><font size=2><%=h @reservar_sala.data_reserva.strftime("%d/%m/%Y")%></font></td>
        </tr>
        <tr>
           <td align="left"><font size=2><b>Inicio:</b></font></td>
           <td align="left"><font size=2><%=h @reservar_sala.horario_reservai.strftime("%H:%M")%> horas</font></td>
        </tr>
        <tr>
           <td align="left"><font size=2><b>Final:</b></font></td>
           <td align="left"><font size=2><%=h @reservar_sala.horario_reservaf.strftime("%H:%M")%> horas</font></td>
        </tr>
        <tr>
           <td align="left"><font size=2><b>Solicitante:</b></font></td>
           <td align="left"><font size=2><%=h @reservar_sala.solicitante%></font></td>
        </tr>
        <tr>
           <td align="left"><font size=2><b>Utilização:</b></font></td>
           <td align="left"><font size=2><%=h @reservar_sala.utilizacao%></font></td>
        </tr>
         <tr>
            <td valign="top"><b>Serviços Solicitados:</b></td>
            <td>
                <% @reservar_sala.servicos_salas.each do |servico| %>
                  - <%=h servico.servico%><br/>
                <% end %>
            </td>
          </tr>
        <tr>
           <td align="left"><font size=2><b>Observação:</b></font></td>
           <td align="left"><font size=2><%=h @reservar_sala.obs%></font></td>
        </tr>
      </table>
    </td>
  </tr>
  <tr>
    <td colspan="2">
            <div class="botao">
        <table width="100%" align="right">
           <tr>
              <td  align="right"><%= link_to image_tag("/stylesheets/images/botaoA.png"), reservar_salas_path, :title => "Agenda"%></td>

              <td width="2"align="right" ><%= button_to("Imprimir", onclick="javascript:window.print()", :title => "Imprimir") %></td>
        </table>
      </div>
    </td>
  </tr>
     </table>


<br/>






