<% form_for(@reservar_sala) do |f| %>
<%= f.error_messages %>
<font  size="2">
 <table class="tabelas" width="50%" align="center">
  <tr>
   <th align="left">
     <font  size=5><b> RESERVA DE SALA PARA REUNIÃO</b></font>
   </th>
    <td width="10%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <fieldset><legend><font size ="4"><b>Reserva</b></font></legend>
        <table align="center"  width="100%">
         <tr>
           <td colspan="2">
             <font style="color: red"><b><u><%= flash[:notice] %></u></b></font>
           </td>
         </tr>

         <tr>
               <td align="left" width="8%"><font size=2><b>Local:</b></font></td>
               <td align="left"><font size=2><%= f.collection_select  :sala_id, @salas, :id, :sala, :include_blank => ' -- Selecione -- '  %></font>
               <%= observe_field 'reservar_sala_sala_id',
                     :with   => :reservar_sala_sala_id,
                     :update => "especifica",
                     :url  => { :action => 'sel_dados' }
                     %>

              <div id="especifica"></div></td>
           </tr>
           <tr>
              <td align="left"><font size=2><b>Data Reserva:</b></font></td>
              <td align="left"><font size=2><%= f.date_select :data_reserva %></font></td>
              <%= $testetest = params[:data_reserva]  %>
               <%= observe_field 'reservar_sala_data_reserva',
                     :with   => :reservar_sala_data_reserva,
                     :url  => { :action => 'sel_data' }
                     %>

           </tr>
           <tr>
              <td align="left"><font size=2><b>Inicio:</b></font></td>
              <td align="left"><font size=2><%= f.time_select :horario_reservai %></font></td>
           </tr>       <tr>
              <td align="left"><font size=2><b>Encerramento:</b></font></td>
              <td align="left"><font size=2><%= f.time_select :horario_reservaf %></font></td>
           </tr>
           <tr>
              <td align="left"><font size=2><b>Solicitante:</b></font></td>
              <td align="left"><%= f.text_field :solicitante%></td>
           </tr>
           <tr>
              <td align="left"><font size=2><b>Utilização:</b></font></td>
              <td align="left"><%= f.text_field :utilizacao%></td>
           </tr>
          <tr>
              <td align="left" valign="top"><font size=2><b>Participantes:</b></font></td>
              <td align="left"><font size=2><%= f.text_field(:quantidade,:size =>"1")%></font>
               <font color="red"><b>(Informar quantidade de pessoas) </b></font>
              </td>
          </tr>
          <tr>
              <td align="left" valign="top"><font size=2><b>Observação:</b></font></td>
              <td align="left"><font size=2><%= f.text_field(:obs,:cols =>50, :rows => "3") %></font></td>
          </tr>
          <tr>
              <td align="left" colspan="2"valign="top"></td>
          </tr>
         </table>
         </fieldset>
            <div class="botao">
              <table width="100%" align="right">
                 <tr>
                    <td align="right"><input type="image" src="/stylesheets/images/salvar10.png" title="Gravar"></td>
      <% end %>
                    <td width="2%" align="right" > <%= button_to("Voltar", homes_path, :title => "Voltar") %></td>
                  </tr>
              </table>
            </div>
    </td>
  </tr>
  </table>
</font>

