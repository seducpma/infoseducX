 <table  class="tabelas1"   align="center" width="100%">
 <tr>
    <th align="left">
       <font size=5 color="black"> <b>  CONTROLE DE SOLICITAÇÕES</b></font>
    </th>
    <td width="5%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
  <div class="botao">
  <tr>
   <td colspan="3">
     <table>
      <tr>
         <td align="right" ><%= button_to('Voltar', homes_path, :method => "get", :title => "Voltar")%></td>
         <td width="2%"align="right" ><%= button_to('Solicitações',acompanhamentos_path, :method => "get", :title => "Protocolos") %></td>
         <td width="2%"align="right" ><%= button_to('Novo', new_acompanhamento_path, :title => "Novo Protocolo")%></td>
         <td  width="2%" align="right"><%= button_to "Consultar", consulta_acompanhamentos_path, :title => "Consultar" %></td>
      </tr>
    </table>
   </td>
  </tr>
 </div>
 <tr>
   <td colspan="3">
     <% form_remote_tag :url => acompanhamento_acompanhamentos_path, :method => :get,:loading => "$('#status').show()" , :success => "$('#status').hide()" do %>
       <table width="100%">
        <tr>
          <td align="left" >
               <a href="#" class="sem_filtro"><%= radio_button_tag(:type_of, "1",true) %></a>Abertos
               <a href="#" class="sem_filtro"><%= radio_button_tag(:type_of, "2") %></a>Encerrados
               <a href="#" class="sem_filtro"><%= radio_button_tag(:type_of, "3") %></a>Todos
           </td>
         </tr>
         <tr>
           <td colspan="2"align="right"><%= submit_tag "Filtrar", :class => "btn_filtrar" %>
           </td>
         </tr>
      </table>
    <% end %>
    <br/>
    <hr>
   </td>
 </tr>
<tr>
  <td colspan="3">
   <div id="protocolo">
     <table border="2" width="100%">
         <tr>
            <th width ="1%" align="center">Nº</th>
            <th width ="10%">Criança</th>
            <th width ="10%">Nascimento</th>
            <th width ="90%">Assunto</th>
            <th width ="50%">Data</th>
            <th> Encerrado</th>
          </tr>

            <% for protocolo in @acompanhamentos %>
           <tr>
               <td><b><font color="red" size="3"><center><%=h protocolo.codigo %></center></font></b></td>
               <td><%=h protocolo.crianca %></td>
               <td><%=h protocolo.nascimento.strftime("%d/%m/%y")%></td>
               <td><%=h protocolo.assunto %></td>
               <td><%=h protocolo.created_at.strftime("%d/%m/%y") %></td>
               <% if  protocolo.encerrado == 0 %>
                 <td align="center"> NÃO </td>
               <%  else  %>
                 <td align="center"><font color="red" > <%=h protocolo.data_encerrado.strftime("%d/%m/%y") %></font> </td>
               <% end %>
            </tr>
           <tr>
             <td colspan="7">
                <% if protocolo.encerrado == 1 %>
                  <table align="right">
                    <tr>
                      <td colspan="2" align="right"><%= button_to('Solicitação',{:action => "show", :id =>protocolo}, :method => "get", :title => "Solicitação") %></td>
                      <td width="1%" align="right"> <%= button_to('Reabrir',{:action => "edit", :id =>protocolo}, :method => "get", :title => "Despachar") %></td>
                    </tr>
                  </table>
               <% else %>
                  <table align="right">
                    <tr>
                       <td colspan="2" align="right"><%= button_to('Solicitação',{:action => "show", :id =>protocolo}, :method => "get", :title => "Solicitação") %></td>
                       <td width="1%" align="right"> <%= button_to('Despachar',{:action => "edit", :id =>protocolo}, :method => "get", :title => "Despachar") %></td>
                    </tr>
                  </table>
               <%end%>
             </td>
           </tr>
       <%end%>
     </table>
   </div>
  </td>
</tr>
  <div class="botao">
  <tr>
   <td colspan="3">
     <table>
      <tr>
         <td align="right" ><%= button_to('Voltar', homes_path, :method => "get", :title => "Voltar")%></td>
         <td width="2%"align="right" ><%= button_to('Solicitações',acompanhamentos_path, :method => "get", :title => "Protocolos") %></td>
         <td width="2%"align="right" ><%= button_to('Novo', new_acompanhamento_path, :title => "Novo Protocolo")%></td>
         <td  width="2%" align="right"><%= button_to "Consultar", consulta_acompanhamentos_path, :title => "Consultar" %></td>
      </tr>
    </table>
   </td>
  </tr>
 </div>

</table>

