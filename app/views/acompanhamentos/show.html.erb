<font size="2">
<table class="tabelas"width="40%"align="center">
 <tr>
   <th align="left">
       <font  size=5 color="black"> <b>CONTROLE DE SOLICITAÇÔES - SEDUC/PMA</b></font>
   </th>
    <td width="5%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  homes_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
 <tr>
   <td colspan="2">
    <fieldset><legend><font  size=4>SOLICITAÇÃO</font></legend>
       <table>
          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>Código:</b></td>
            <td width="5%" colspan="3"><%=h @acompanhamento.codigo %></td>
          </tr>
          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>Criança:</b></td>
            <td width="5%"><%=h @acompanhamento.crianca %></td>
            <td width="1%"align="right"><b>Nascimento: </b></td>
            <td width="10%"align="left"><%=h @acompanhamento.nascimento.strftime("%d/%m/%Y") %> </td>
          </tr>
          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>RA:</b></td>
            <td width="5%"><%=h @acompanhamento.RA %></td>
            <td width="1%"align="right"><b>Inscrição: </b></td>
            <td width="10%"align="left"><%=h @acompanhamento.inscricao%></td>
          </tr>
          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>Mãe:</b></td>
            <td width="5%"><%=h @acompanhamento.mae %></td>
            <td width="1%"align="right"><b>Responsável: </b></td>
            <td width="10%"align="left"><%=h @acompanhamento.responsavel  %></td>
          </tr>
          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>Endereço:</b></td>
            <td width="5%"><%=h @acompanhamento.endereco %></td>
            <td width="1%"align="right"><b>Bairro: </b></td>
            <td width="10%"align="left"><%=h @acompanhamento.bairro %> </td>
          </tr>
          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>Cidade:</b></td>
            <td width="5%"><%=h @acompanhamento.cidade %></td>
            <td width="1%"align="right"><b>CEP: </b></td>
            <td width="10%"align="left"><%=h @acompanhamento.cep %></td>
          </tr>
          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>Fone1:</b></td>
            <td width="5%"><%=h @acompanhamento.fone %></td>
            <td width="1%"align="right"><b>Fone2: </b></td>
            <td width="10%"align="left"><%=h @acompanhamento.fone1 %></td>
          </tr>

          <tr>
            <td width="1%"></td>
            <td width="1%" valign="Top" width="9%"><b>E_mail:</b></td>
            <td width="5%"><%=h @acompanhamento.email %></td>
            <td width="1%"align="right"><b>Celular: </b></td>
            <td width="10%"align="left"><%=h @acompanhamento.cel %></td>
          </tr>
          <tr>
            <td></td>
            <td align="left"><b>Solicitante: </b></td>
            <td colspan="3"align="left"><%=h @acompanhamento.solicitante%></td>
          </tr>

          <tr>
            <td></td>
            <td align="left"><b>Assunto: </b></td>
            <td colspan="3"align="left"><%=h @acompanhamento.assunto%></td>
          </tr>
          <tr>
            <td></td>
            <td align="left" valign="top"><b>Despachos: </b></td>
            <td align="left" colspan="3"> <%= render :partial => 'acompanhamento_despachos'  %></td>
          </tr>
           <% if @acompanhamento.encerrado == 1 %>
              <tr>
                <td></td><td></td>
                <td colspan="4"><b>Encerrado em</b>  <%=h @acompanhamento.data_encerrado.strftime("%d de %B de %Y") %></td>
              </tr>
             <%else%>
             <tr>
                <td></td><td></td>
                <td colspan="4"><b>NÃO Encerrado</b></td>
              </tr>
            <% end %>

       </table>
    </fieldset>
    <div class="botao">
      <table>
           <tr>
              <td align="right" ><%= button_to('Voltar', homes_path, :method => "get", :title => "Voltar")%></td>
              <td width="2%" align="right"> <%= button_to('Editar',{:action => "editar", :id =>@acompanhamento}, :method => "get", :title => "Editar",  $despachar =>1) %></td>
              <td width="2%"align="right" ><%= button_to('Solicitações',acompanhamentos_path, :method => "get", :title => "Solicitações") %></td>
                       <% if @acompanhamento.encerrado == 0 %>
                 <td width="2%" align="right"><%= button_to "Consultar", consulta_acompanhamentos_path, :title => "Consultar" %></td>
                 <td width="2%" align="right"> <%= button_to('Despachar',{:action => "edit", :id =>@acompanhamento}, :method => "get", :title => "Despachar") %></td>
              <%else%>
                <td  width="2%" align="right"><%= button_to "Consultar", consulta_acompanhamentos_path, :title => "Consultar" %></td>
                   <td width="2%" align="right"> <%= button_to('Reabrir',{:action => "edit", :id =>@acompanhamento}, :method => "get", :title => "Reabrir") %></td>
              <%end%>
            </tr>
      </table>
   </div>
  </td>
 </tr>
</table>
</font>
<br/>
