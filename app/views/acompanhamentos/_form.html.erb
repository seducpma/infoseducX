<% form_for @acompanhamento do |f| %>
<%= f.error_messages %>
<font  size="2">
<table class="tabelas" align="center">
 <tr>
    <th align="left">
       <font size=5 color="black"> <b>  CONTROLE DE SOLICITAÇÕES - SEDUC/PMA</b></font>
    </th>
    <td width="5%">
     <center><%= link_to image_tag("/stylesheets/images/excluir.PNG", :size => "20x20"),  home_path, {:method => "get"}, :title => "Fechar"%></center>
   </td>
 </tr>
 <tr>
   <td colspan="2">
     <table width="100%">
        <tr>
           <td width="10%"align="left"><font size="2"><b>Criança:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :crianca, :size =>35 %></font></td>
           <td align="left"><font size="2"><b>Nascimento:</b></font></td>
           <td align="left"><font size="2"><%= f.date_select(:nascimento, :order => [:day, :month, :year], :start_year => (Date.today.year), :end_year => (Date.today.year - 15)) %></font></td>
        </tr>
        <tr>
           <td width="10%"align="left"><font size="2"><b>Inscrição/RA:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :inscricao, :size =>35 %></font></td>
           <td align="left"><font size="2"><b>Atendido  por:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :funcionario, :size =>35 %></font></td>
        </tr>
        <tr>
           <td align="left"><font size="2"><b>Mãe:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :mae, :size =>35 %></font></td>
           <td align="left"><font size="2"><b>Responsável:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :responsavel, :size =>35 %></font></td>
        </tr>
        <tr>
           <td align="left"><font size="2"><b>Endereço:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :endereco, :size =>35 %></font></td>
           <td align="left"><font size="2"><b>Bairro:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :bairro, :size =>35 %></font></td>
        </tr>
        <tr>
           <td align="left"><font size="2"><b>Cidade:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :cidade, :size =>35 %></font></td>
           <td align="left"><font size="2"><b>CEP:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :cep, :size =>4 %>
              &nbsp&nbsp<b>Complemento:</b><%= f.text_field :complemento, :size =>11 %> </font></td>
        </tr>
        <tr>
           <td align="left"><font size="2"><b>Fone1:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :fone, :size =>10 %>
              &nbsp&nbsp&nbsp<b>Fone2:</b><%= f.text_field :fone1, :size =>10 %> </font></td>
           <td align="left"><font size="2"><b>E_mail:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :email, :size =>35 %> </font></td>
        </tr>
        <tr>
           <td align="left"><font size="2"><b>Celular:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :cel, :size =>35 %></font></td>
           <td align="left"><font size="2"><b>Solicitante:</b></font></td>
           <td align="left"><font size="2"><%= f.text_field :solicitante, :size =>35 %> </font></td>
        </tr>
        <tr>
           <td align="left" valign="top"><font size="2"><b>Assunto:</b></font></td>
           <td align="left" colspan="3"><font size="2"><%= f.text_area :assunto, :cols=>'108', :rows=> '3' %></font></td>
        </tr>
        
     </table>
   </td>
 </tr>
 <tr>
   <td colspan="2">
      <div class="botao">
        <table width="40%" align="right">
           <tr>
             <td align="right"><%= f.submit "Gravar" %> </td>
<% end %>
              <td width="2%" align="right"><%= button_to('Voltar', home_path, :method => "get", :title => "Voltar")%></td>
              <td width="2%" align="right" ><%= button_to('Despachos', acompanhamentos_path, :method => "get",  :title => "Protocolos")%></td>
              <td width="2%" align="right"><%= button_to "Consultar", acompanhamentos_path, :title => "Consultar" %></td>
           </tr>
        </table>
      </div>
   </td>
  </tr>
 </table>
 </font>
<br/>
