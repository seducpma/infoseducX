<div style='display:none'>
  <div id='inline_acompanhamento_despacho' style='padding:10px; background:#EEE9E9;'>
    <% form_remote_for(:acompanhamento_despacho,:url => { :action => 'create_acompanhamento_despacho' }, :success => "$.fn.colorbox.close();$('select').multiselect('refresh')") do |f|%>
     <center><h2>DESPACHO </h2><h1>SOLICITAÇÃO - <%=h @acompanhamento.codigo %><br/>
     <%=h @acompanhamento.crianca %></h1></center>
      <hr>
       <%= error_messages_for 'contact' %>
       <table  width="100%" bgcolor="#F5F5F5">
        <tr>
            <td width="10%" valign="top"><b><font size="2"><%= f.label :funcionario, 'Funcionário:' %></font></b></td>
            <td><%= f.text_field :funcionario, :size=>'40' %></td>
        </tr>
        <tr>
            <td width="10%" valign="top"><b><font size="2"><%= f.label :despacho, 'Despacho:' %></font></b></td>
            <td><%= f.text_area :despacho, :cols=>'50', :rows=> '3' %></td>
        </tr>
        <tr>
            <td width="10%" valign="top"><b><font size="2"><%= f.label :obs, 'Observação:' %></font></b></td>
            <td><%= f.text_area :obs, :cols=>'50', :rows=> '2' %></td>
        </tr>
        <tr>
           <td align="left" colspan="3"><font size="2"></font><br/>
                           <a href="#" class="sem_filtro"><%= radio_button_tag(:type_of, "1", :checked => "true") %></a> <font size="2">Recusado</font>
                           <a href="#" class="filtro"><%= radio_button_tag(:type_of, "2") %></a><font size="2">Aceitado</font>
           </td>
        </tr>

        <tr>
            <td align="right" colspan="2"><%= f.submit "Salvar" %></td>
        </tr>
       </table>
      <%end%>
  </div>
</div>
