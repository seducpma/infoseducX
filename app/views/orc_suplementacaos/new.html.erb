<div id="interno5">
<% title "ALUNOS".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>ORÇAMENTO SEDUC/PMA - SUPLEMENTAÇÃO </strong></font><br/>
 </div>
      <div class="tabs">
          <br/>
              <% form_for(@orc_suplementacao) do |f| %>
              <%= f.error_messages %>
              <font  size="2">
               <table  width="100%"  align="center"  bgcolor="#F5F5F5" >
               <tr>
                 <td colspan="2">
                  <fieldset><legend><font  size=3> Suplementação de Saldo </font></legend>
                    <table width="100%"  >
                      <tr>
                         <td align="left"><b>Ficha à Suplementar:</b></td>
                         <td align="left"><%= f.collection_select :orc_ficha_id, @fichas, :id, :ficha, :include_blank => ' -- Selecionar -- ' %></td>
                                          <%= observe_field 'orc_suplementacao_orc_ficha_id',
                                                     :with   => :orc_suplementacao_orc_ficha_id,
                                                     :url  => { :action => 'dados_ficha' },
                                                     :update => "ficha"%>

                      </tr>

                      <tr>
                        <td colspan="2"><div id="ficha"></div></td>
                      </tr>
                      <tr>
                         <td align="left"><b>Ficha de Origem:</b></td>
                         <td align="left"><%= f.collection_select :orc_ficha_origem_id, @fichas, :id, :ficha, :include_blank => ' -- Selecionar -- ' %></td>
                                          <%= observe_field 'orc_suplementacao_orc_ficha_origem_id',
                                                     :with   => :orc_suplementacao_orc_ficha_origem_id,
                                                     :url  => { :action => 'dados_ficha_origem' },
                                                     :update => "ficha1"%>

                      </tr>

                      <tr>
                        <td colspan="2"><div id="ficha1"></div></td>
                      </tr>
                      <tr>
                         <td width="10%"align="left"><b>Processo:</b></font></td>
                         <td align="left"><%=  f.text_field :processo , :size =>10 %></td>
                      </tr>
                      <tr>
                         <td width="10%"align="left"><b>Decrição:</b></font></td>
                         <td align="left"><%=  f.text_field :destinacao , :size =>45 %></td>
                      </tr>
                      <tr>
                         <td colspan="2"><b>Data: </b>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<%= datepicker_tag(:orc_suplementacao, :data,{ :size => 10},{:dateFormat => "'dd-mm-yy'", :changeYear => true, :changeMonth => true, :yearRange => "'-90:+0'", :buttonImage => "'/stylesheets/images/datepicker.gif'",:showOn => "'both'" }) %></td>
                      </tr>
                      <tr>
                         <td width="10%"align="left"><b>Valor: R$</b></font></td>
                         <td  align="left"> <%=  f.text_field :valor_suplemento , :size =>10 %></td>
                      </tr>
                    <tr>
                      <td colspan="2" align="center"> <font color =" red"> <b> UTILIZE PONTO PARA SEPRAÇÃO DOS CENTAVOS <br/>  NÃO UTULIZE VIRGULA </b></font></td>
                    </tr>

                   </table>
                  </fieldset>
                 </td>
               </tr>
               <tr>
                 <td colspan="2">

                      <table width="40%" align="left">
                         <tr>
                           <td width="2%" align="left"><%= f.submit "Salvar" %> </td>
              <% end %>
                            <td width="2%" align="left"><%= button_to('Voltar', home_path, :method => "get", :title => "Fechar")%></td>
                            <td width="2%" align="left" ><%= button_to('Suplementações', orc_suplementacaos_path, :method => "get",  :title => "Despesas")%></td>
                         </tr>
                      </table>
                 </td>
                </tr>
               </table>
               </font>
           <br/>
      </div>
     <br/>
</div>
<br/>
</div>

