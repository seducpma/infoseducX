    <fieldset><legend><font  size=4> Solicitação</font></legend>
      <table width="100%" align="center">
               <tr>
                  <td align="left" width="15%"><b>Nº Protocolo:</b></td>
                  <td align="left" colspan="2"><%=h @c_externo.id %></td>
               </tr>
        <tr>
            <td align="left" width="15%"><b>Empresa:</b></td>
            <td align="left" colspan="2"><%=h @c_externo.empresa.nome %></td>
          </tr>
          <tr>
            <td align="left"><b>Unidade:</b></td>
            <td align="left" colspan="2"><%=h @c_externo.unidade.nome %></td>
          </tr>
          <tr>
            <td align="left"><b>Tipo  Serviço:</b></td>
            <td align="left" colspan="2"><%=h @c_externo.tipo_osexterna.tipo %></td>
          </tr>
          <tr>
            <td align="left"><b>Nº Protocolo / OS:</b></td>
            <td align="left"colspan="2"><%=h @c_externo.protocolo %></td>
          </tr>
          <tr>
            <td align="left"><b>Atendente:</b></td>
            <td align="left"colspan="2"><%=h @c_externo.atendente %></td>
          </tr>
          <tr>
            <td align="left"><b>Data:</b></td>
            <td align="left"colspan="2"><%=h  @c_externo.data_hora.strftime("%d/%m/%Y") %></td>
          </tr>
          <tr>
            <td align="left"><b>Problema:</b></td>
            <td align="left"colspan="2"><%=h  @c_externo.obs %></td>
          </tr>
