            <tr>
              <td align="left"><b>Situação:</b></td>
              <td align="left" colspan="2"> Chamado ENCERRADO em <%=h  @c_externo.data_encerra.strftime("%d/%m/%Y") %></td>
            </tr>
            <tr>
              <td align="left"><b>Procedimentos <br/>Executados:</b></td>
              <td align="left" colspan="2" valign="top"> <%=h  @c_externo.executado %></td>
            </tr>

          <%else%>
            <tr>
              <td align="left"><b>Situação:</b></td>
              <td align="left" colspan="2"> Chamado NÂO ENCERRADO </td>
            </tr>
          <%end%>
 
     </table>
   </fieldset>

