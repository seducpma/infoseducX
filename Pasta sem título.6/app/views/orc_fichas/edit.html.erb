

<div id="interno3">
<% title "ALUNOS".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>ORÇAMENTO SEDUC/PMA - FICHA</strong></font><br/>
 </div>
      <div class="tabs">
          <br/>
              <% form_for(@orc_ficha) do |f| %>
              <%= f.error_messages %>
              <font  size="2">
               <table  width="100%"  align="center"  bgcolor="#F5F5F5" >
               <tr>
                 <td colspan="2">
                  <fieldset><legend><font  size=3> Fichas </font></legend>
                    <table width="100%"  >
                      <tr>
                         <td width="10%"align="left"><b>Número:</b></font></td>
                         <td colspan="3"width="5%" align="left"><%=  f.text_field :ficha , :size =>10 %>&nbsp&nbsp&nbsp
                                      <b>Código:</b> &nbsp&nbsp<%=  f.text_field :codigo , :size =>10 %> &nbsp&nbsp&nbsp
                                 <b>Ano Letivo:</b> &nbsp&nbsp <%= f.text_field :ano, :size =>10 %></td>
                      </tr>
                      <tr>
                         <td align="left"><b>Ficha:</b></td>
                         <td colspan="5" align="left"><%= f.text_field :descricao, :size =>50 %></td>
                      </tr>
                      <tr>
                         <td width="10%"align="left"><b>Unidade Orçamentaria:</b></td>
                         <td colspan="2"width="30%" align="left"><%= f.collection_select :orc_uni_orcamentaria_id, @orcamentaria, :id, :descricao, :include_blank => ' -- Selecionar -- ' %>
                                       <%= observe_field 'orc_ficha_orc_uni_orcamentaria_id',
                                                     :with   => :orc_ficha_orc_uni_orcamentaria_id,
                                                     :url  => { :action => 'lista_orcamentaria' },
                                                     :update => "orcamentaria"%>
                          <br/><div id="orcamentaria"></div> </td>
                      </tr>
                      <tr>
                         <td width="10%"align="left"><b>DR:</b></font></td>
                         <td colspan="5" align="left"><%=  f.text_field :dr , :size =>10 %> &nbsp&nbsp&nbsp
                                        <b>Fonte:</b> &nbsp&nbsp <%=h @orc_ficha.fonte %></td>
                      </tr>
                      <tr>
                        <td colspan="6">
                           <fieldset><legend><font  size=4>Saldos</font></legend>
                             <table width="100%">
                                <tr>
                                  <td align="left"width="10%"><b>Inicial: </b></td>
                                  <td align="left">R$ <%=h @orc_ficha.valor_inicial %></td>
                                  <td align="left"width="10%"><b>Atual: </b></td>
                                  <td align="left">R$<%=  f.text_field :saldo_atual ,:onblur => 'MascaraMoeda' , :size =>12  %></td>
                                </tr>
                                <tr>
                                  <td align="left"width="10%"><b>Aporte: </b></td>
                                  <td align="left">R$<%=  f.text_field :saldo_aporte , :size =>12 %></td>
                                  <td align="left"width="10%"><b>Transferido: </b></td>
                                  <td align="left">R$ <%=  f.text_field :saldo_transferido, :size =>12 %></td>
                                </tr>
                                <tr>
                                  <td align="left"width="10%"><b>Empenhado: </b></td>
                                  <td align="left">R$ <%= f.text_field :saldo_empenhado, :size =>12 %></td>
                                  <td align="left"width="10%"><b>Reservado: </b></td>
                                  <td align="left">R$ <%=  f.text_field :saldo_reservado , :size =>12 %></td>
                                </tr>
                                <tr>
                                  <td align="left" colspan="2" ><font color =" blue"><b>Saldo Disponivel: </b> &nbsp&nbsp R$ <%=  f.text_field :saldo , :size =>12 %> </font></td>
                                </tr>
                              </table>
                            </fieldset>

                        </td>
                      </tr>

                      <tr>

                        <td colspan="5"><b><font color ="red"> &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp  <u>ATENÇÂO:</u> Nos valores monetários utilize PONTO e NÂO VÍRGULA para separação de centavos </b></font>           </td>
                       </tr>

                   </table>
                  </fieldset>
                 </td>
               </tr>
               <tr>
                 <td colspan="2">

                      <table width="40%" align="left">
                         <tr>
                           <td width="2%" align="left"><%= f.submit "Salvar" %> </td>
              <% end %>
                            <td  align="left"><%= button_to('Fechar', home_path, :method => "get", :title => "Fechar")%></td>
                            
                         </tr>
                      </table>
                 </td>
                </tr>
               </table>
               </font>
           <br/>
      </div>
     <br/>
</div>
<br/>
</div>



