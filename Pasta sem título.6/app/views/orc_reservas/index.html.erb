    <td><%=h orc_reserva.obs %></td>
    <td><%= link_to 'Show', orc_reserva %></td>
    <td><%= link_to 'Edit', edit_orc_reserva_path(orc_reserva) %></td>
    <td><%= link_to 'Destroy', orc_reserva, :confirm => 'Are you sure?', :method => :delete %></td>
