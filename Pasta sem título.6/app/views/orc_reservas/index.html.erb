<table>
  <tr>
    <th>Orc ficha</th>
    <th>Valor</th>
    <th>Data</th>
    <th>Motivo</th>
    <th>Cancela</th>
    <th>Justificativa</th>
    <th>Data</th>
    <th>Data cancelamento</th>
