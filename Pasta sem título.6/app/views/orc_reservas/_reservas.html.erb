
 <div class="tabs">
 <br/>
 
 <%if !@reservas.empty?%>

     <table bgcolor="#DCDCDC" width="100%">
        <tr bgcolor="#DCDCDC" >
            <td align="center" width ="5%"><b>Nº Reserva </b></td>
            <td align="center"><b>Data</b></td>
            <td align="center"><b>Justificativa</b></td>
            <td align="center"><b>Valor</b></td>
            <td align="center"><b>Ficha</b></td>
            <td align="center" width ="5"><b>Status</b></td>

          </tr>
          <% @reservas.each  do |reserva| %>
 
             <tr  bgcolor="#F5F5F5">

              <td align="center"><%=h reserva.id %></td>
              <td align="center"><%if !reserva.data.nil? %><%=h reserva.data.strftime("%d/%m/%Y") %> <%end%> </td>
              <td align="center"><%=h reserva.motivo%></td>
              <td align="center"> R$ <%=h reserva.valor%></td>
              <td > &nbsp <%=h reserva.orc_ficha.ficha%> - <%=h reserva.orc_ficha.descricao%></td>
              <td align="center"> <%if reserva.cancela == 1%>
                                        <font color= 'red'>  Cancelada </font>
                                     <%else%>
                                           
                                     <%end%>
              </td>
      
      
                            <td align="right"><%= button_to 'Editar', {:action => "edit", :id =>reserva}, :method => "get", :title => "Editar"%></td>
                            <td width ="5%" align="center"><%= button_to 'Visualizar',{:action => "show", :id =>reserva}, :method => "get", :title => "Visualizar"%> </td>
                            <td  width ="5%" ><%= button_to 'Excluir', reserva, :confirm => 'Confirma Exclusao?', :method => :delete, :title => "Excluir" %></td>

            </tr>
          <% end %>
    </table>
   <%else%>
     <table bgcolor="#DCDCDC" width="100%">
        <tr bgcolor="#DCDCDC" >
          <td align="center" colspan="6"><b>NÃO EXISTE LANÇAMENTOS</b></td>

            </tr>

    </table>
   <%end%>
</div>
    <br/>