<table width="100% "bgcolor="#DCDCDC" >
                       <tr >
                         <td></td>
                          <td align="left"><b> Produto</b></td>
                          <td align="left"><b> Entrada</b></td>
                          <td align="center"><b>Data</b></td>
                          <td align="center"><b> Saida</b></td>
                          <td align="center"><b>Data</b></td>
                          <td></td>
                       </tr>
                      <% @lancamentos_periodo.each do |lancamento| %>
                        <tr bgcolor="#F5F5F5">
                           <td width ="1%"><%= button_to('', {:action => "show", :id =>lancamento},:method => "get", :title => "Visualizar") %></td>
                          <td><%=h lancamento.produto.produto %></td>
                          <td align="center"><%=h lancamento.entrada %></td>
                          <td align="center"><%if !lancamento.data_entrada.nil?%>
                                                  <%=h lancamento.data_entrada.strftime("%d/%m/%Y") %>
                                             <%end%>
                          </td>
                          <td align="center"><%=h lancamento.saida %></td>
                          <td align="center"><%if !lancamento.data_saida.nil?%>
                                                  <%=h lancamento.data_saida.strftime("%d/%m/%Y") %>
                          </td>              <%end%>
                          <td width ="6%"><%= button_to('Visualizar', {:action => "show", :id =>lancamento},:method => "get", :title => "Visualizar") %></td>
                       </tr>
                      <%end%>
                      <% @produto.each do |produto| %>

                        <tr bgcolor="#F5F5F5">
                          <td align="left" colspan="6"><b> Estoque Atual => </b> <%=h produto.estoque%> <%=h produto.unidade%></td>

                          <td width ="6%"><%= button_to('Visualizar', {:controller => "produtos", :action => "show", :id =>produto},:method => "get", :title => "Visualizar") %></td>
                       </tr>
                      <%end%>
</table>

