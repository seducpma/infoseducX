          <tr>
            <td align="right"><font size="2"> <b class="label_busca5">Disciplina:</b></font>
                
               <%= collection_select :disciplina, :id, @disciplinas, :id, :disciplina, :include_blank => ' -- Selecionar -- ' %>
               <%= submit_tag "Visualizar", :class => "btn_filtrar" %>
          </td>
        </tr>

       </table>