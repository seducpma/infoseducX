<h1>Editing sala</h1>

<% form_for(@sala) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :sala %><br />
    <%= f.text_field :sala %>
  </p>
  <p>
    <%= f.label :descricao %><br />
    <%= f.text_field :descricao %>
  </p>
  <p>
    <%= f.label :localizacao %><br />
    <%= f.text_field :localizacao %>
  </p>
  <p>
    <%= f.label :obs %><br />
    <%= f.text_field :obs %>
