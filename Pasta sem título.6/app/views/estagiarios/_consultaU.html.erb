<table width="100%" align="center" >
    <%  if current_user.unidade_id == 52 or current_user.unidade_id == 53 %>
       <% @unidades= Unidade.find(:all, :order => 'nome ASC') %>
     <%  else %>
        <% @unidades= Unidade.find(:all , :conditions => ['id = ?', current_user.unidade_id]) %>
      <% end%>
   <tr>
     <td colspan="2"align="right"><font size="2"> <b class="label_busca">Unidade:</b></font>
        <%= collection_select :estagiario, :unidade_id, @unidades, :id, :nome, :include_blank => ' -- Selecionar -- ',:class=> "txt_busca1"  %>
          <%= observe_field 'estagiario_unidade_id',
               :update => "dados",
               :url    => { :action => 'lista_consulta_unidade' },
               :with   => 'estagiario_unidade_id' %>


     </td>
   </tr>
  </table>

